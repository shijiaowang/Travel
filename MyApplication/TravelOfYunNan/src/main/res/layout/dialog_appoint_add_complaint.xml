<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x334"
    android:layout_height="@dimen/x211"
    android:background="@drawable/appoint_enter_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x39"
        android:background="@color/otherTitleBg"
        android:gravity="center"
        android:text="投诉举报"
        android:textColor="@color/colorFAFAFA"
        android:textSize="@dimen/x15sp" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x25"
        android:layout_marginLeft="@dimen/x4"
        android:layout_marginRight="@dimen/x4"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:layout_marginLeft="0dp"
            style="@style/complaintRb"
            android:text="政治煽动"
            />

        <RadioButton
            style="@style/complaintRb"
            android:text="诈骗"
             />

        <RadioButton
            style="@style/complaintRb"
            android:text="色情"
             />

        <RadioButton
            style="@style/complaintRb"
            android:text="侵权"
             />

        <RadioButton
            style="@style/complaintRb"
            android:text="其它"
           />

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x22"
        android:layout_marginRight="@dimen/x22"
        android:layout_weight="1">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x2"
            android:text="@string/activity_activate_detail_pen"
            android:textColor="@color/colorb5b5b5" />

        <EditText
            android:id="@+id/et_conetnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:paddingLeft="@dimen/x20"
            android:hint="请输入投诉详细内容"
            android:textColorHint="@color/colorb5b5b5"
            android:textColor="@color/color646464"
            android:textSize="@dimen/x13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginBottom="@dimen/x22"
        android:layout_marginLeft="@dimen/x22"
        android:layout_marginRight="@dimen/x22"
        android:layout_marginTop="@dimen/x2"
        android:background="@drawable/line_dot" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x25"
        android:background="@color/meLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x39"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color646464"
            android:textSize="@dimen/x14sp" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x27"
            android:layout_gravity="center_vertical"
            android:background="@color/meLine" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/otherTitleBg"
            android:textSize="@dimen/x14sp" />
    </LinearLayout>
</LinearLayout>
