<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x162"
    android:layout_height="@dimen/x142">

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:alpha="0.47"
        android:background="#000000"
        android:layout_width="@dimen/x162"
        android:layout_height="@dimen/x27">
        <TextView
            android:id="@+id/tv_name"
            style="@style/activityOtherAlbumFont"
            android:layout_marginLeft="@dimen/x8"
            />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/x1"/>
        <com.yunspeak.travel.ui.view.FontsIconTextView
            style="@style/activityOtherAlbumFont"
            android:layout_marginRight="@dimen/x5"
            android:text="@string/activity_other_album_eye"
            />
        <TextView
            android:id="@+id/tv_watch_number"
            style="@style/activityOtherAlbumFont"
            android:layout_marginRight="@dimen/x8"
            />

    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/x162"
        android:layout_height="@dimen/x142" />

</FrameLayout>
