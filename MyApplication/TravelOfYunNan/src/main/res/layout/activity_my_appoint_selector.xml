<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@color/colorFAFAFA"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32">
            <TextView
                android:id="@+id/tv_appointing"
                android:layout_marginLeft="@dimen/x13"
                android:textSize="@dimen/x13sp"
                android:textColor="@color/otherFcae04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_price"
                android:textColor="@color/otherFf7f6c"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x9"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/x13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/meLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>
        <LinearLayout
            android:layout_marginTop="@dimen/x7"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginBottom="@dimen/x14"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80" />
            <include layout="@layout/activity_my_appoint_common"/>
            <Button
                android:id="@+id/bt_select"
                android:gravity="center"
                android:text="选择"
                android:textColor="@color/colorFAFAFA"
                android:textSize="@dimen/x12sp"
                android:layout_marginRight="@dimen/x15"
                android:background="@drawable/activity_my_appoint_chat_bg"
                android:layout_width="@dimen/x74"
                android:layout_height="@dimen/x24" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/x16"
            android:layout_marginLeft="@dimen/x29"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x29">
            <RelativeLayout
                android:id="@+id/rl_member_detail"
                android:layout_width="@dimen/x74"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:text="成员详情"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="@dimen/x12sp"
                    android:background="@drawable/activity_my_appoint_rl_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x24" />
                <View
                    android:id="@+id/bv_enter_people"
                    android:background="@drawable/message_dot"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_alignParentRight="true"
                    style="@style/activityMessageCenterDot" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_bulletin_board"
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="@dimen/x66"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:text="公告板"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="@dimen/x12sp"
                    android:background="@drawable/activity_my_appoint_rl_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x24" />
                <View
                    android:id="@+id/bv_bulletin_number"
                    android:background="@drawable/message_dot"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_alignParentRight="true"
                    style="@style/activityMessageCenterDot" />

            </RelativeLayout>

        </LinearLayout>
        <View
            android:background="@color/meLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>

    </LinearLayout>
    <LinearLayout
        android:paddingTop="@dimen/x2"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x137"
        android:layout_alignParentRight="true"
        android:background="@drawable/activity_my_appoint_key_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x24">
        <TextView
            android:textSize="@dimen/x12sp"
            android:textColor="@color/colorFAFAFA"
            android:text="口令："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/code"
            android:textSize="@dimen/x12sp"
            android:textColor="@color/colorFAFAFA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
