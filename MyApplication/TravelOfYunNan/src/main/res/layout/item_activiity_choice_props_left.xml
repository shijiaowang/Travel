<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="50dp">
 <View
     android:id="@+id/v_cursor"
     android:background="@color/otherTitleBg"
     android:layout_width="3dp"
     android:layout_height="50dp"/>
    <TextView
        android:id="@+id/tv_type"
        android:text="登山"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/color646464"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
    <com.example.administrator.travel.ui.view.FontsIconTextView
        android:id="@+id/tv_cursor"
        android:textColor="@color/otherTitleBg"
        android:text="@string/activity_cursor_left"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
