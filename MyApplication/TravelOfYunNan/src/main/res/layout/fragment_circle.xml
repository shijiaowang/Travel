<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_height="@dimen/x134">
        <View
            android:id="@+id/v_left"
            android:background="@color/colorFAFAFA"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/v_right"
            android:background="@color/colorf6f6f6"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x134"
        android:background="@drawable/fragment_circle_nav">

        <TextView
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/x18"
            android:layout_marginLeft="@dimen/x56"
            android:text="圈子导航"
            android:textColor="@color/circleTitleColorChecked"
            android:textSize="@dimen/x12sp" />

        <TextView
            android:id="@+id/tv_right_title"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/x18"
            android:layout_marginRight="@dimen/x60"
            android:text="热帖"
            android:textColor="@color/circleTitleColorUnChecked"
            android:textSize="@dimen/x12sp" />

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_circle"
        android:layout_below="@+id/rl_title_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />

</RelativeLayout>