<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/activityTravelsPlanRl"
            android:layout_marginTop="@dimen/x36">

            <com.yunspeak.travel.ui.view.FontsIconTextView
                style="@style/activityTravelsPlanTv"
                android:text="@string/activity_personnel_equipment_people" />

            <TextView
                android:id="@+id/tv"
                style="@style/activityTravelsPlanDes"
                android:text="人员计划" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/tv"
                android:textColor="@color/color909090"
                android:textSize="@dimen/x12sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/x53"
            android:layout_marginTop="@dimen/x14"
            android:text="安阳安阳"
            android:textColor="@color/colorface04"
            android:textSize="@dimen/x14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.yunspeak.travel.ui.view.FlowLayout
            android:layout_marginLeft="@dimen/x53"
            android:id="@+id/fl_people"
            android:layout_marginBottom="@dimen/x26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.yunspeak.travel.ui.view.FlowLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x53"
            android:orientation="vertical">


            <Button
                android:id="@+id/bt_select_equ"
                android:layout_width="@dimen/x125"
                android:layout_height="@dimen/x35"
                android:layout_marginBottom="@dimen/x50"
                android:background="@drawable/activity_travels_plan_line_bg"
                android:gravity="center"
                android:text="邀请好友"
                android:textColor="@color/colorFAFAFA"
                android:textSize="@dimen/x16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x13"
                android:orientation="horizontal">

                <TextView
                    style="@style/activityTravelsPlanTvTime"
                    android:layout_height="@dimen/x23"
                    android:gravity="center_vertical"
                    android:text="认证筛选" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x24"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:text="性别筛选" />

                        <RelativeLayout
                            android:id="@+id/rl_sex_select"
                            android:layout_width="@dimen/x105"
                            android:layout_height="@dimen/x23"
                            android:layout_marginLeft="@dimen/x16"
                            android:background="@drawable/activity_travels_plan_time_bg">

                            <TextView
                                android:layout_width="@dimen/x22"
                                android:layout_height="@dimen/x23"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/activity_travels_plan_time_bg"
                                android:gravity="center"
                                android:text="▼"
                                android:textColor="@color/color323232"
                                android:textSize="@dimen/x10sp"
                                android:id="@+id/textView5" />

                            <TextView
                                android:id="@+id/tv_sex"
                                android:layout_width="@dimen/x84"
                                android:layout_height="@dimen/x23"
                                android:gravity="center"
                                android:text="不限"
                                android:textColor="@color/color323232"
                                android:textSize="@dimen/x15sp"
                                android:layout_alignBaseline="@+id/textView5"
                                android:layout_alignBottom="@+id/textView5"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x24"
                        android:layout_marginTop="@dimen/x15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:text="身份筛选" />

                        <RelativeLayout
                            android:id="@+id/rl_auth_select"
                            android:layout_width="@dimen/x105"
                            android:layout_height="@dimen/x23"
                            android:layout_marginLeft="@dimen/x16"
                            android:background="@drawable/activity_travels_plan_time_bg">

                            <TextView
                                android:id="@+id/tv_auth"
                                android:layout_width="@dimen/x84"
                                android:layout_height="@dimen/x23"
                                android:gravity="center"
                                android:text="不限"
                                android:textColor="@color/color323232"
                                android:textSize="@dimen/x15sp" />

                            <TextView
                                android:layout_width="@dimen/x22"
                                android:layout_height="@dimen/x23"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/activity_travels_plan_time_bg"
                                android:gravity="center"
                                android:text="▼"
                                android:textColor="@color/color323232"
                                android:textSize="@dimen/x10sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <Button
        style="@style/commonButtonNext"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
