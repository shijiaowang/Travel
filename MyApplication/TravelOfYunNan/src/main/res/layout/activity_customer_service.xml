<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:paddingTop="19dp"
        android:textSize="12sp"
        android:textColorHint="@color/colorA1a1a1"
        android:gravity="start"
        android:hint="请描述一下您的问题，稍后会有工作人员与您联系(最多600字)"
        android:lines="8"
        android:maxLength="600"
        android:maxLines="60"
        android:background="@color/colorFAFAFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.administrator.travel.ui.view.FontsIconTextView
            android:textSize="14sp"
            android:text="@string/activity_customer_center_tel"
            android:textColor="@color/color4a4a4a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14sp"
            android:text="您的联系方式"
            android:textColor="@color/color4a4a4a"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:maxLength="11"
            android:lines="1"
            android:singleLine="true"
            android:gravity="center"
            android:id="@+id/et_phone"
            android:inputType="phone"
            android:layout_marginLeft="9dp"
            android:background="@color/colorFAFAFA"
            android:layout_width="200dp"
            android:layout_height="38dp" />

    </LinearLayout>
    <Button
        android:text="提交"
        android:textColor="@color/colorFAFAFA"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/fragment_find_search_bg"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="151dp"
        android:layout_height="36dp" />

</LinearLayout>
