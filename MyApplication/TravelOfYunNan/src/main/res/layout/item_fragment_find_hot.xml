<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorFAFAFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="175dp" />
            <TextView
                android:id="@+id/tv_type"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="8sp"
                style="@style/commonSingleLineTextStyle"
                android:textColor="@color/otherFcae04"
                android:background="@drawable/fragment_find_title_bg"
                android:layout_width="45dp"
                android:layout_height="20dp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color323232"
            android:textSize="14sp"
            android:lineSpacingExtra="8dp"
            android:ellipsize="end"
            android:lines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.yunspeak.travel.ui.view.FontsIconTextView
                android:text="@string/item_fragment_find_add"
                android:layout_marginLeft="10dp"
                android:textColor="#c1c1c1"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_address"
                android:textColor="@color/colorC1c1c1"
                android:layout_marginLeft="7dp"
                style="@style/commonSingleLineTextStyle"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
