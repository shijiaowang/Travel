<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/fragment_find_bg_test"
                android:layout_width="match_parent"
                android:layout_height="175dp" />
            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="世界美食"
                android:textSize="8sp"
                android:textColor="#fcae04"
                android:background="@drawable/fragment_find_title_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:textColor="#323232"
            android:textSize="14sp"
            android:lineSpacingExtra="8dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="这是一个安静的早上，早上，早上，早上，早上,，老板不会弹吉他，不会弹吉他。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:text="@string/item_fragment_find_add"
                android:layout_marginLeft="10dp"
                android:textColor="#c1c1c1"
                android:id="@+id/tv_add"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="大理古城西区一号街"
                android:textColor="#c1c1c1"
                android:layout_marginLeft="7dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
