<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.yunspeak.travel.ui.view.LoginEditText
        style="@style/activityRegisterEditText"
        app:line_edittext_hint="请输入旧密码"
        app:line_edittext_input_left="@dimen/x15"
        app:line_edittext_max_length="20"
        android:id="@+id/pv_old_password" />
    <com.yunspeak.travel.ui.view.LoginEditText
        style="@style/activityRegisterEditText"
        app:line_edittext_hint="请输入新密码"
        app:line_edittext_input_left="@dimen/x15"
        app:line_edittext_max_length="20"
        android:id="@+id/pv_new_password" />
    <com.yunspeak.travel.ui.view.LoginEditText
        style="@style/activityRegisterEditText"
        app:line_edittext_hint="请输入新密码"
        app:line_edittext_input_left="@dimen/x15"
        app:line_edittext_max_length="20"
        android:id="@+id/pv_re_new_password" />

    <com.yunspeak.travel.ui.view.AvoidFastButton
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x37"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x140"
        android:background="@drawable/login_button_selector"
        android:gravity="center"
        android:text="@string/save_change"
        android:textColor="@color/colorFAFAFA"
        android:textSize="@dimen/x18sp"
        android:id="@+id/bt_next" />

</LinearLayout>
