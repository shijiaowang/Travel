<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.yunspeak.travel.ui.view.LoginEditText
        style="@style/activityRegisterEditText"
        app:line_edittext_hint="请输入旧密码"
        app:line_edittext_input_left="15dp"
        app:line_edittext_max_length="20"
        android:id="@+id/pv_old_password" />
    <com.yunspeak.travel.ui.view.LoginEditText
        style="@style/activityRegisterEditText"
        app:line_edittext_hint="请输入新密码"
        app:line_edittext_input_left="15dp"
        app:line_edittext_max_length="20"
        android:id="@+id/pv_new_password" />
    <com.yunspeak.travel.ui.view.LoginEditText
        style="@style/activityRegisterEditText"
        app:line_edittext_hint="请输入新密码"
        app:line_edittext_input_left="15dp"
        app:line_edittext_max_length="20"
        android:id="@+id/pv_re_new_password" />

    <com.yunspeak.travel.ui.view.AvoidFastButton
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:background="@drawable/login_button_selector"
        android:gravity="center"
        android:text="保存修改"
        android:textColor="@color/colorFAFAFA"
        android:textSize="18sp"
        android:id="@+id/bt_next" />

</LinearLayout>
