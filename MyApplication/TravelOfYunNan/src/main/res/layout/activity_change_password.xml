<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:text="请输入旧密码"
        android:textColor="@color/color323232"
        android:textSize="14sp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.yunspeak.travel.ui.view.LoginEditText
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/pv_old_password" />

    <TextView

        android:text="请输入新密码"
        android:textColor="@color/color323232"
        android:textSize="14sp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.yunspeak.travel.ui.view.LoginEditText
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/pv_new_password" />
    <TextView
        android:text="请输入新密码"
        android:textColor="@color/color323232"
        android:textSize="14sp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.yunspeak.travel.ui.view.LoginEditText
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/pv_re_new_password" />

    <com.yunspeak.travel.ui.view.AvoidFastButton
        android:layout_marginTop="65dp"
        android:layout_gravity="center_horizontal"
        style="@style/commonButtonNext"
        android:text="保存"
        android:background="@drawable/fragment_find_search_bg"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/avoidFastButton" />

</LinearLayout>
