<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">
    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_centerVertical="true"
            android:background="@drawable/activity_select_destination_search_bg"
            android:layout_width="230dp"
            android:layout_height="27dp" >
            <EditText
                android:id="@+id/et_search"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_search"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="@string/fragment_circle_search"
                android:textColor="@color/otherTitleBg"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <Button
            android:id="@+id/bt_diy"
            android:text="添加自定义景点"
            android:gravity="center"
            android:textColor="@color/colorFAFAFA"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/rl_search"
            android:layout_centerVertical="true"
            android:background="@drawable/fragment_find_search_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="11dp"
        android:text="· 热门自定义景点"
        android:textColor="@color/colorb5b5b5"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="7dp"/>
    <com.example.administrator.travel.ui.view.refreshview.XListView
        android:id="@+id/lv_destination"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp">

    </com.example.administrator.travel.ui.view.refreshview.XListView>

</LinearLayout>
