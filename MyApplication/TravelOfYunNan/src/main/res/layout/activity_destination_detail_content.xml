<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFAFAFA"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <LinearLayout style="@style/activityDeliciousDetailLl">

            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_play_way"
                style="@style/activityDeliciousDetailTvIcon"
                android:text="@string/activity_add_detail_team_profile" />

            <TextView
                style="@style/activityDeliciousDetailTvName"
                android:text="特色玩法" />
        </LinearLayout>

        <com.example.administrator.travel.ui.view.FlowLayout
            android:id="@+id/fl_play_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

        </com.example.administrator.travel.ui.view.FlowLayout>

        <LinearLayout
            android:id="@+id/ll_search_appoint"
            android:layout_width="101dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/activity_activate_detail_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索相关约伴"
                android:textColor="@color/colorFAFAFA"
                android:textSize="11sp" />

            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/fragment_circle_search"
                android:textColor="@color/colorFAFAFA"
                android:textSize="11sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/meLine" />

        <LinearLayout style="@style/activityDeliciousDetailLl">

            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_spot"
                style="@style/activityDeliciousDetailTvIcon"
                android:text="@string/activity_add_detail_team_profile" />

            <TextView
                style="@style/activityDeliciousDetailTvName"
                android:text="景点介绍" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_destination_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/cat_more"
                android:textColor="@color/otherTitleBg"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout style="@style/activityDeliciousDetailLl">

            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_spot_add"
                style="@style/activityDeliciousDetailTvIcon"
                android:text="@string/activity_add_detail_spot_add" />

            <TextView
                style="@style/activityDeliciousDetailTvName"
                android:text="景点位置" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_add_picture"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/otherTitleBg"
            android:textSize="11sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/meLine" />

        <LinearLayout style="@style/activityDeliciousDetailLl">

            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_discuss"
                style="@style/activityDeliciousDetailTvIcon"
                android:text="@string/activity_circle_discuss" />

            <TextView
                style="@style/activityDeliciousDetailTvName"
                android:text="实话实说" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/content_list"
        style="@style/commonListViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>