<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/x10"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/colorFAFAFA" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x2"
            app:cardBackgroundColor="@color/colorFAFAFA"
            app:cardCornerRadius="@dimen/x5"
            app:cardElevation="@dimen/x1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/x112"
                android:layout_height="@dimen/x112" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x20"
            android:layout_weight="1"
            android:background="@color/colorFAFAFA"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x10">

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color323232"
                android:textSize="@dimen/x16sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/otherTitleBg"
                android:textSize="@dimen/x11sp" />

            <TextView
                android:id="@+id/tv_start_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color646464"
                android:textSize="@dimen/x13sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5">

                <TextView
                    android:id="@+id/tv_plan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color646464"
                    android:textSize="@dimen/x13sp" />

                <TextView
                    android:id="@+id/tv_have_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_toRightOf="@id/tv_plan_number"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color646464"
                    android:textSize="@dimen/x13sp" />
            </RelativeLayout>
        </LinearLayout>

         <FrameLayout
             android:layout_marginTop="@dimen/x20"
             android:background="@color/colorFAFAFA"
             android:layout_width="wrap_content"
             android:layout_height="match_parent">
             <TextView
                 android:layout_marginRight="-4dp"
                 android:id="@+id/tv_money"
                 android:paddingLeft="@dimen/x4"
                 android:paddingRight="@dimen/x5"
                 style="@style/commonSingleLineTextStyle"
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/x27"
                 android:layout_marginTop="@dimen/x5"
                 android:paddingTop="@dimen/x5"
                 android:background="@drawable/activity_my_appoint_key_bg"
                 android:gravity="center"
                 android:textColor="@color/colorFAFAFA"
                 android:textSize="@dimen/x11sp" />

         </FrameLayout>

    </LinearLayout>

    <com.yunspeak.travel.ui.view.FlowLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x2"
        android:background="@color/colorFAFAFA"
        android:paddingBottom="@dimen/x11"
        android:paddingLeft="@dimen/x15"
        android:paddingTop="@dimen/x12">

    </com.yunspeak.travel.ui.view.FlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginRight="@dimen/x2"
        android:background="@color/meLine" />

    <include layout="@layout/appoint_bottom_common" />


</LinearLayout>
