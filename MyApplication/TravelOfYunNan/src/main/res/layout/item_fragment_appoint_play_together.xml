<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/ll1"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/colorFAFAFA"
        android:layout_marginRight="@dimen/x8"
        android:layout_marginLeft="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x114"/>

    <com.yunspeak.travel.ui.view.FlowLayout
        android:layout_below="@id/ll1"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFAFAFA"
        android:paddingBottom="@dimen/x11"
        android:paddingLeft="@dimen/x15"
        android:paddingTop="@dimen/x12">

    </com.yunspeak.travel.ui.view.FlowLayout>

    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_below="@id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
    />

        <include
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x8"
            android:layout_below="@id/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/appoint_bottom_common" />


    <LinearLayout
        android:layout_marginLeft="@dimen/x8"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/x2"
            app:cardBackgroundColor="@color/colorFAFAFA"
            app:cardCornerRadius="@dimen/x5"
            app:cardElevation="@dimen/x1">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/x112"
                android:layout_height="@dimen/x112" />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_marginTop="@dimen/x20"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <include
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/activity_my_appoint_common"/>
        </LinearLayout>

        <TextView
            android:layout_marginRight="@dimen/x3"
            android:layout_marginTop="@dimen/x25"
            android:id="@+id/tv_money"
            android:paddingLeft="@dimen/x4"
            android:paddingRight="@dimen/x5"
            style="@style/commonSingleLineTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x27"
            android:paddingTop="@dimen/x5"
            android:background="@drawable/activity_my_appoint_key_bg"
            android:gravity="center"
            android:textColor="@color/colorFAFAFA"
            android:textSize="@dimen/x11sp" />
    </LinearLayout>



</RelativeLayout>
