<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/colorFAFAFA" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            app:cardBackgroundColor="@color/colorFAFAFA"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_icon"
                android:layout_width="112dp"
                android:layout_height="112dp" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/colorFAFAFA"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color323232"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/otherTitleBg"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_start_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color646464"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_plan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color646464"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_have_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_plan_number"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color646464"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>


            <TextView
                android:layout_marginRight="-4dp"
                android:id="@+id/tv_money"
                android:paddingLeft="4dp"
                android:paddingRight="5dp"
                style="@style/commonSingleLineTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                android:paddingTop="5dp"
                android:background="@drawable/activity_my_appoint_key_bg"
                android:gravity="center"
                android:text="Â¥100"
                android:textColor="@color/colorFAFAFA"
                android:textSize="11sp" />

    </LinearLayout>

    <com.yunspeak.travel.ui.view.FlowLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:background="@color/colorFAFAFA"
        android:paddingBottom="11dp"
        android:paddingLeft="15dp"
        android:paddingTop="12dp">

    </com.yunspeak.travel.ui.view.FlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="2dp"
        android:background="@color/meLine" />

    <include layout="@layout/appoint_bottom_common" />


</LinearLayout>
