<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fafafa"
    android:layout_marginBottom="11dp"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_cover"
        android:layout_width="165dp"
        android:layout_height="122dp" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#323232"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.administrator.travel.ui.view.FontsIconTextView
            android:layout_marginLeft="10dp"
           android:text="@string/activity_circle_love_empty"
            android:textColor="#b5b5b5"
            android:textSize="9sp"
            android:id="@+id/tv_love_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:textColor="#b5b5b5"
            android:textSize="9sp"
            android:id="@+id/tv_love_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.administrator.travel.ui.view.FontsIconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/activity_circle_discuss"
            android:textColor="#b5b5b5"
            android:textSize="9sp"
            android:id="@+id/fontsIconTextView" />

        <TextView
            android:layout_marginLeft="5dp"
            android:paddingRight="10dp"
            android:textColor="#b5b5b5"
            android:textSize="9sp"
            android:id="@+id/tv_discuss_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
