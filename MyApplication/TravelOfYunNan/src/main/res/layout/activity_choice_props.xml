<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    >
   <View
       android:background="@color/meLine"
       android:layout_width="80dp"
       android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/meLine"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/lv_type"
                    style="@style/commonListViewStyle"
                    android:layout_width="80dp"
                    android:layout_height="match_parent">

                </ListView>

                <ListView
                    android:id="@+id/lv_equ"
                    style="@style/commonListViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorFAFAFA">

                </ListView>
            </LinearLayout>
            <RelativeLayout

                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="#33000000"
                android:id="@+id/rl_select"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:background="@color/colorFAFAFA"
                    android:layout_alignParentBottom="true"
                    style="@style/commonListViewStyle"
                    android:id="@+id/lv_select_equ"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="41dp"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/colora4e0db">

            <Button
                android:id="@+id/bt_sure"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/color7fd8cd"
                android:gravity="center"
                android:text="选好了"
                android:textColor="@color/colorFAFAFA"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="69dp"
                android:gravity="center"
                android:text="已选择：0件物品"
                android:textColor="@color/colorFAFAFA"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_equ"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/activity_choice_props_bg">

        <TextView
            android:id="@+id/tv_equ_number"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/number_bg"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="0"
            android:textColor="@color/colorFAFAFA"
            android:textSize="11sp" />

        <com.example.administrator.travel.ui.view.FontsIconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/activity_personnel_equipment_equ"
            android:textColor="@color/colorFAFAFA"
            android:textSize="20sp" />

    </RelativeLayout>
</RelativeLayout>