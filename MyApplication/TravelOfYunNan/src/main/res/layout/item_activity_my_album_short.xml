<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x165"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x11"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x122"
    />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color323232"
        android:textSize="@dimen/x13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x8"
        android:layout_marginTop="@dimen/x9"
        android:gravity="center_vertical">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:id="@+id/tv_love_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="@string/activity_circle_love_empty"
            android:textColor="#b5b5b5"
            android:textSize="@dimen/x9sp" />

        <TextView
            android:id="@+id/tv_love_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x5"
            android:textColor="@color/colorb5b5b5"
            android:textSize="@dimen/x9sp" />
        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="@string/activity_circle_discuss"
            android:textColor="@color/colorb5b5b5"
            android:textSize="@dimen/x9sp" />

        <TextView
            android:id="@+id/tv_discuss_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:paddingRight="@dimen/x10"
            android:textColor="@color/colorb5b5b5"
            android:textSize="@dimen/x9sp" />

    </LinearLayout>


</LinearLayout>
