<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="158dp"
    android:orientation="vertical"
    android:background="@color/homeTopicChosenBg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="109dp">
        <ImageView
            android:id="@+id/iv_chosen_picture"
            android:scaleType="fitXY"
            android:src="@drawable/fragment_home_chosen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_chosen_text"
        android:text="是谁，在敲打你窗，是谁是谁是谁"
        android:lineSpacingExtra="3dp"
        android:ellipsize="end"
        android:textSize="10sp"
        android:textColor="@color/homeTopicChosenText"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:lines="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
