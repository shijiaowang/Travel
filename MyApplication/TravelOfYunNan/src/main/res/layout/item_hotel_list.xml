<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_hotel_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x134" />
    <TextView
        android:id="@+id/tv_hotel_name"
        android:textColor="@color/color646464"
        android:textSize="@dimen/x14sp"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x6"
        android:ellipsize="end"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/color969696"
        android:textSize="@dimen/x12sp"
        android:id="@+id/tv_hotel_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_hotel_money"
        android:textColor="@color/otherFf7f6c"
        android:layout_width="wrap_content"
        android:textSize="@dimen/x12sp"
        android:layout_marginRight="@dimen/x7"
        android:layout_gravity="end"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x22" />
    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>

</LinearLayout>
