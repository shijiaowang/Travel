<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorFAFAFA"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/x15"
    android:paddingRight="@dimen/x15"
    android:layout_height="@dimen/x80">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_hotel_room_bg"
        android:layout_width="@dimen/x59"
        android:layout_height="@dimen/x59" />
    <LinearLayout
        android:layout_marginStart="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_hotel_room_name"
            android:textColor="@color/color323232"
            android:textSize="@dimen/x13sp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginBottom="@dimen/x11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_hotel_room_size"
            android:textColor="@color/color969696"
            android:textSize="@dimen/x12sp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_hotel_room_price"
        android:layout_marginTop="@dimen/x40"
        android:textSize="@dimen/x15sp"
        android:textColor="@color/otherFf7f6c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_hotel_room_select"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginTop="@dimen/x36"
        android:textSize="@dimen/x13sp"
        android:textColor="@color/colorFAFAFA"
        android:minHeight="@dimen/x22"
        android:minWidth="@dimen/x38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
