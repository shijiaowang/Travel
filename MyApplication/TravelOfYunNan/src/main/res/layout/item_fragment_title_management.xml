<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.administrator.travel.ui.view.FontsIconTextView

            android:text="@string/activity_title_management_title"
            android:textColor="@color/colorff8270"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="骑马"
            android:textColor="@color/color323232"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="进度:"
            android:textColor="@color/color646464"
            android:textSize="14sp"
            android:layout_marginLeft="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="74dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="1dp"
                android:id="@+id/ll_progress"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="50"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="/100"
                    android:textColor="@color/color646464"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <ProgressBar
                android:layout_below="@id/ll_progress"
                android:id="@+id/pb_progress"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/activity_title_management_progress_bg"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

        </RelativeLayout>
        <TextView
            android:text="已获得"
            android:textColor="@color/otherTitleBg"
            android:textSize="14sp"
            android:layout_marginLeft="51dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_toggle"
            android:layout_marginLeft="11dp"
            android:text="＞"
            android:textSize="9sp"
            android:gravity="center"
            android:textColor="@color/colorFAFAFA"
            android:background="@drawable/other_title_oval_bg"
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_toggle"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="25dp"
                android:text="·"
                android:textColor="@color/otherFcae04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/color646464"
                android:textSize="14sp"
                android:layout_marginLeft="7dp"
                android:text="称号说明:这只是一个说明而已！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="25dp"
                android:text="·"
                android:textColor="@color/otherFcae04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/color646464"
                android:textSize="14sp"
                android:layout_marginLeft="7dp"
                android:text="获得条件:看人品。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView

                android:background="@drawable/rectangle_other_title_bg"
                android:layout_alignParentRight="true"
                android:text="已佩戴"
                android:textColor="@color/otherTitleBg"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="69dp"
                android:layout_height="25dp" />

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
