<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x285"
    android:orientation="vertical"
    android:background="@drawable/appoint_enter_dialog_bg"
    android:layout_height="wrap_content">
    <TextView
        android:text="评价订单"
        android:gravity="center"
        android:background="@color/otherTitleBg"
        android:textColor="@color/colorFAFAFA"
        android:textSize="@dimen/x15sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x39" />
    <TextView
        android:text="请对此次出行/订单进行评价"
        android:textColor="@color/color646464"
        android:textSize="@dimen/x13sp"
        android:layout_margin="@dimen/x10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/rb_group"
        android:layout_marginBottom="@dimen/x19"
        android:layout_marginTop="@dimen/x5"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_discuss_good"
            android:text="好评"
            android:gravity="center"
            android:background="@drawable/good_disscuss_bg"
            android:textColor="@color/good_disscuss_color"
            android:textSize="@dimen/x12sp"
            android:button="@null"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x25" />
        <RadioButton
            android:id="@+id/rb_discuss_normal"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginRight="@dimen/x27"
            android:text="中评"
            android:gravity="center"
            android:background="@drawable/bad_disscuss_bg"
            android:textColor="@color/normal_disscuss_color"
            android:textSize="@dimen/x12sp"
            android:button="@null"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x25" />
        <RadioButton
            android:id="@+id/rb_discuss_bad"
            android:text="差评"
            android:gravity="center"
            android:background="@drawable/bad_disscuss_bg"
            android:textColor="@color/normal_disscuss_color"
            android:textSize="@dimen/x12sp"
            android:button="@null"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x25" />

    </RadioGroup>
    <TextView
        android:text="评语"
        android:textColor="@color/color646464"
        android:layout_marginLeft="@dimen/x10"
        android:textSize="@dimen/x13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x25"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginBottom="@dimen/x20"
        android:layout_width="match_parent"
        android:minHeight="@dimen/x50"
        android:background="@drawable/order_text_discuss_bg"
        android:layout_height="wrap_content">
        <EditText
            android:maxLength="120"
            android:hint="请输入您的评语"
            android:paddingTop="@dimen/x5"
            android:paddingLeft="@dimen/x5"
            android:textColor="@color/color969696"
            android:textColorHint="@color/colorb5b5b5"
            android:textSize="@dimen/x10sp"
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0/120"
            android:textSize="@dimen/x10sp"
            android:textColor="@color/colorb5b5b5"
            android:id="@+id/tv_count"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:gravity="end"
            android:layout_below="@id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/meLine"
        android:layout_marginRight="@dimen/x25"
        android:layout_marginLeft="@dimen/x25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x39">
        <TextView
            android:id="@+id/tv_cancel"
            android:gravity="center"
            android:textColor="@color/color646464"
            android:textSize="@dimen/x14sp"
            android:text="取消"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <View
            android:background="@color/meLine"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x27"/>
        <TextView
            android:id="@+id/tv_sure"
            android:gravity="center"
            android:textColor="@color/otherTitleBg"
            android:textSize="@dimen/x14sp"
            android:text="确定"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
