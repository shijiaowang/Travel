<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x20"
            android:text="公开显示"
            android:textColor="@color/color646464"
            android:textSize="@dimen/x14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/meLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x12"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:text="最多同时显示7个称号"
            android:textColor="@color/colorb5b5b5"
            android:textSize="@dimen/x11sp" />


        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:dividerDrawable="@drawable/flexbox_space"
            app:flexWrap="wrap"
            app:showDivider="middle" />

       <View
           android:background="@color/meLine"
           android:layout_width="match_parent"
           android:layout_height="@dimen/x6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x20"
            android:text="添加标签"
            android:textColor="@color/color646464"
            android:textSize="@dimen/x14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/meLine" />

        <com.yunspeak.travel.ui.view.SimpleViewPagerIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical">

        </com.yunspeak.travel.ui.view.SimpleViewPagerIndicator>



            <android.support.v4.view.ViewPager
                android:id="@+id/vp_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/x4">

            </android.support.v4.view.ViewPager>

          <com.yunspeak.travel.ui.view.PagerCursorView
              android:layout_marginTop="@dimen/x5"
              android:layout_marginBottom="@dimen/x10"
              android:id="@+id/pager_cursor"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x6"/>
</LinearLayout>
