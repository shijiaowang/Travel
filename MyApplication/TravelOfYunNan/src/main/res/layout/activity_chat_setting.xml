<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_chat_number"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x22"
        android:textColor="@color/color323232"
        android:textSize="@dimen/x16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorFAFAFA"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginBottom="@dimen/x15"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:id="@+id/tv_cursor"
            android:layout_marginRight="@dimen/x22"
            android:textSize="@dimen/x15sp"
            android:text="@string/activity_message_center_cursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"/>

    <TextView
        android:gravity="center"
        android:id="@+id/bt_clear"
        android:text="清空聊天记录"
        android:textColor="@color/otherFf7f6c"
        android:textSize="@dimen/x15sp"
        android:background="@color/colorFAFAFA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x34" />

    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"/>
</LinearLayout>
