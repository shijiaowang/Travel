<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/x144"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_follow_fan_cursor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="@dimen/x72"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="关注"
            android:textColor="#fafafa"
            android:textSize="@dimen/x15sp" />

        <TextView
            android:id="@+id/tv_fan"
            android:layout_width="@dimen/x72"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_follow_fan_right"
            android:gravity="center"
            android:text="粉丝"
            android:textColor="@color/homeTitleBg"
            android:textSize="@dimen/x15sp" />

</LinearLayout>
