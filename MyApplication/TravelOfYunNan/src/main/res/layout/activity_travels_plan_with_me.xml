<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical"
    android:paddingBottom="40dp">

    <View
        style="@style/fragmentMeLine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <RelativeLayout style="@style/activityTravelsPlanRl">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            style="@style/activityTravelsPlanTv"
            android:text="@string/fragment_find_add" />

        <TextView
            style="@style/activityTravelsPlanDes"
            android:text="出发地" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_start_city"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/activity_create_album_add_bg"
        android:gravity="center_vertical"
        android:hint="选择您的出发地..."
        android:paddingLeft="6dp"
        android:textColorHint="@color/colorb5b5b5"
        android:textSize="13sp" />


    <View
        style="@style/fragmentMeLine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <RelativeLayout style="@style/activityTravelsPlanRl">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            style="@style/activityTravelsPlanTv"
            android:text="@string/activity_add_detail_spot_add" />

        <TextView
            style="@style/activityTravelsPlanDes"
            android:text="理想地" />

    </RelativeLayout>

    <com.yunspeak.travel.ui.view.FlowLayout
        android:id="@+id/fl_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="23dp"
        android:visibility="gone">

    </com.yunspeak.travel.ui.view.FlowLayout>

    <com.yunspeak.travel.ui.view.FontsIconButton
        android:id="@+id/bt_destination"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/activity_create_album_add_bg"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:text="@string/activity_my_album_add"
        android:textColor="@color/otherTitleBg"
        android:textSize="15sp" />
</LinearLayout>

