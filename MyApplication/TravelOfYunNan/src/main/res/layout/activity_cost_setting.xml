<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                style="@style/activityTravelsPlanRl"
                android:layout_marginTop="35dp">

                <com.yunspeak.travel.ui.view.FontsIconTextView
                    style="@style/activityTravelsPlanTv"

                    android:text="@string/activity_personnel_equipment_people" />

                <TextView
                    style="@style/activityTravelsPlanDes"
                    android:text="费用设置" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    style="@style/activityTravelsPlanTvTime"
                    android:text="每人收费" />

                <EditText
                    android:id="@+id/et_price"
                    android:inputType="number"
                    style="@style/activityTravelsPlanTvTimeSelect"
                    android:layout_width="51dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="start|center_vertical"
                     />

                <TextView
                    style="@style/activityTravelsPlanTv"
                    android:layout_marginLeft="15dp"
                    android:text="元" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="14dp"
                android:text="(约伴发起人需预交约伴最大人数*每人收费*20%的押金)"
                android:textColor="@color/colorb5b5b5"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/activityTravelsPlanTvTime"
                    android:layout_height="23dp"
                    android:gravity="center_vertical"
                    android:text="其他费用" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="39dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:text="平台服务费" />

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:layout_marginLeft="22dp"
                            android:text="2元/日" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="39dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:text="个人旅游险" />

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:layout_marginLeft="22dp"
                            android:text="2元/日" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:text="费用合计："
                    android:textColor="@color/otherTitleBg"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="43dp"
                    android:layout_marginTop="27dp"
                    android:text="56元/人"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_with_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/activityTravelsPlanTvTime"
                    android:layout_height="23dp"
                    android:gravity="center_vertical"
                    android:text="费用详情" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/activityTravelsPlanTv"
                        android:layout_marginLeft="39dp"
                        android:text="费用包含" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:layout_marginLeft="37dp"
                            android:text="【" />

                        <TextView
                            style="@style/activityCostSettingText"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="9dp"
                            android:text="保险" />

                        <TextView
                            style="@style/activityCostSettingText"
                            android:layout_marginLeft="20dp"
                            android:text="全程路费" />

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:layout_marginLeft="5dp"
                            android:text="】" />
                    </LinearLayout>

                    <TextView
                        style="@style/activityTravelsPlanTv"
                        android:layout_marginLeft="39dp"
                        android:layout_marginTop="14dp"
                        android:text="费用不包含" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:layout_marginLeft="37dp"
                            android:text="【" />

                        <TextView
                            style="@style/activityCostSettingText"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="9dp"
                            android:text="用餐" />

                        <TextView
                            style="@style/activityCostSettingText"
                            android:layout_marginLeft="20dp"
                            android:text="其他个人消费" />

                        <TextView
                            style="@style/activityTravelsPlanTv"
                            android:layout_marginLeft="5dp"
                            android:text="】" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@color/meLine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:text="注意事项"
                android:textColor="@color/color969696"
                android:textSize="15sp" />
            <TextView
                android:text="·游玩结束后，城外旅游将收取总费用5%的服务佣金\n·用户在行程开始前3日申请取消，可全额退款\n·用户在行程开始前2日申请取消，将扣除订单费用的30%作为手续费用\n·用户在行程开始前1日申请取消，将不能申请退款\n·于活动中自愿终止参与活动，将不予退款款项\n·如因天灾等不可抗拒因素，【城外旅游】将主动通知延期或退款"
                android:lineSpacingExtra="8dp"
                android:textColor="@color/color969696"
                android:textSize="13sp"
                android:layout_marginRight="38dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <Button
   style="@style/commonButtonNext"/>

</LinearLayout>