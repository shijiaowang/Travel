<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorFAFAFA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="47dp">
    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_centerVertical="true"
        android:background="@drawable/activity_select_destination_search_bg"
        android:layout_width="230dp"
        android:layout_height="27dp" >
        <EditText
            android:id="@+id/et_search"
            android:paddingLeft="27dp"
            style="@style/commonSingleLineTextStyle"
            android:imeOptions="actionSearch"
            android:maxLength="18"
            android:textSize="10sp"
            android:textColorHint="@color/colorb5b5b5"
            android:hint="输入你想搜索的目的地"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:id="@+id/tv_search"
            android:layout_centerVertical="true"
            android:text="@string/fragment_circle_search"
            android:gravity="center"
            android:textColor="@color/otherTitleBg"
            android:textSize="12sp"
            android:layout_width="27dp"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <Button
        android:id="@+id/bt_diy"
        android:text="自定义景点"
        android:gravity="center"
        android:textColor="@color/colorFAFAFA"
        android:textSize="12sp"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/rl_search"
        android:layout_centerVertical="true"
        android:background="@drawable/fragment_find_search_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="22dp" />
</RelativeLayout>

