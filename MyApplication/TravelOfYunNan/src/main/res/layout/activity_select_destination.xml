<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">
    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_centerVertical="true"
            android:background="@drawable/activity_select_destination_search_bg"
            android:layout_width="230dp"
            android:layout_height="27dp" >
            <EditText
                android:id="@+id/et_search"
                android:paddingLeft="27dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_search"
                android:layout_centerVertical="true"
                android:text="@string/fragment_circle_search"
                android:gravity="center"
                android:textColor="@color/otherTitleBg"
                android:textSize="12sp"
                android:layout_width="27dp"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <Button
            android:id="@+id/bv_diy"
            android:text="自定义景点"
            android:gravity="center"
            android:textColor="@color/colorFAFAFA"
            android:textSize="12sp"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/rl_search"
            android:layout_centerVertical="true"
            android:background="@drawable/fragment_find_search_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />
    </RelativeLayout>
    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <TextView
            android:text="目的地"
            style="@style/activitySelectDestinationText" />
        <TextView
            android:text="分类"
            style="@style/activitySelectDestinationText"  />
        <TextView
            android:text="智能排序"
           style="@style/activitySelectDestinationText" />

    </LinearLayout>
    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="7dp"/>
    <com.example.administrator.travel.ui.view.refreshview.XListView
        android:id="@+id/lv_destination"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp">

    </com.example.administrator.travel.ui.view.refreshview.XListView>

</LinearLayout>
