<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/colorFAFAFA"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="280dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/activity_travels_search_bg">

            <EditText
                android:id="@+id/et_destination_search"
                style="@style/commonSingleLineTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="45dp"
                android:background="@null"
                android:hint="输入感兴趣的关键字"
                android:imeOptions="actionSearch"
                android:maxLength="18"
                android:textColorHint="@color/colorC1c1c1"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />

            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:text="@string/fragment_circle_search"
                android:textColor="@color/colorC1c1c1"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_search"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/activityDestinationTv"
                android:text="地区" />

            <View style="@style/activityDestinationLine" />

            <TextView
                style="@style/activityDestinationTv"
                android:text="分类" />

            <View style="@style/activityDestinationLine" />

            <TextView
                style="@style/activityDestinationTv"
                android:text="默认" />

            <View style="@style/activityDestinationLine" />

        </LinearLayout>

    </RelativeLayout>

    <com.example.administrator.travel.ui.view.refreshview.XListView
        android:id="@+id/lv_destination"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp">

    </com.example.administrator.travel.ui.view.refreshview.XListView>

</LinearLayout>
