<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="#fcfcfd"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x14"
            android:id="@+id/tv_status"
            android:textColor="@color/Ffbf75"
            android:textSize="@dimen/x11sp" />

        <TextView
            android:id="@+id/tv_type"
            android:background="@drawable/activity_orders_center01"
            android:gravity="center"
            android:minWidth="@dimen/x60"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x21"
            android:textColor="@color/colorFAFAFA"
            android:textSize="@dimen/x11sp"
            android:layout_alignTop="@+id/tv_status"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x8"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x14"
        android:paddingTop="@dimen/x8">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/x73"
            android:layout_height="@dimen/x73"
             />

        <include layout="@layout/activity_my_appoint_common"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/tv_price"
            android:textColor="@color/color363535"
            android:textSize="@dimen/x12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/x11"
                android:textColor="@color/color8c8c8c"
                android:textSize="@dimen/x12sp"
                android:text="x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:background="#fcfcfd"
        android:paddingTop="@dimen/x8"
        android:paddingBottom="@dimen/x8"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x13"
            android:textColor="@color/color8c8c8c"
            android:textSize="@dimen/x10sp" />
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x14"
            android:textColor="@color/colorFf8888"
            android:textSize="@dimen/x10sp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x36">
        <TextView
            android:id="@+id/tv_time"
           android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x13"
            android:textColor="@color/colorB1b1b1"
            android:textSize="@dimen/x10sp" />
        <TextView
            android:id="@+id/tv_cancel"
            android:textColor="@color/colorB1b1b1"
            android:gravity="center"
            android:textSize="@dimen/x10sp"
            android:text="取消订单"
            android:layout_marginRight="@dimen/x11"
            android:background="@drawable/activity_travels_search_bg"
            android:layout_width="@dimen/x67"
            android:layout_height="@dimen/x24" />
        <Button
            android:id="@+id/b_pay"
            android:textColor="@color/colorFAFAFA"
            android:gravity="center"
            android:textSize="@dimen/x10sp"
            android:text="付款"
            android:layout_marginRight="@dimen/x14sp"
            android:background="@drawable/activity_activate_detail_bg"
            android:layout_width="@dimen/x67"
            android:layout_height="@dimen/x24" />

    </LinearLayout>
</LinearLayout>
