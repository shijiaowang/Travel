<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fcfcfd"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/activity_orders_center01"
            android:gravity="center"
            android:paddingRight="5dp"
            android:layout_width="55dp"
            android:layout_height="21dp"
            android:text="活动订单"
            android:textColor="@color/colorFAFAFA"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="待支付"
            android:textColor="@color/Ffbf75"
            android:textSize="11sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="14dp"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_test1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/fragmentOrderText"
                android:textColor="@color/color323232"
                android:textSize="12sp"
                android:text="昆明-丽江-香格里拉" />
            <TextView
                style="@style/fragmentOrderText"
                android:text="行程日期：2017-6-1至2018-5-1"
                android:textColor="@color/otherTitleBg"
                android:layout_marginTop="5dp"
                android:textSize="9sp" />


            <TextView
                style="@style/fragmentOrderText"
                android:text="昆明出发 四天四夜"
                android:layout_marginTop="5dp"
                android:textColor="@color/color646464"
                android:textSize="11sp" />

            <TextView
                style="@style/fragmentOrderText"
                android:text="已有：2人"
                android:layout_marginTop="5dp"
                android:textColor="@color/color646464"
                android:textSize="11sp" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:text="¥100"
            android:textColor="@color/color363535"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:text="x2"
                android:layout_marginTop="11dp"
                android:textColor="@color/color8c8c8c"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:background="#fcfcfd"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="订单号： ECDADSDHSKJHDKSHDKS"
            android:textColor="@color/color8c8c8c"
            android:textSize="10sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="合计: ¥100"
            android:textColor="@color/colorFf8888"
            android:textSize="10sp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <TextView
           android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="2016-8-9 14:39"
            android:textColor="@color/colorB1b1b1"
            android:textSize="10sp" />
        <TextView
            android:textColor="@color/colorB1b1b1"
            android:gravity="center"
            android:textSize="10sp"
            android:text="取消订单"
            android:layout_marginRight="11dp"
            android:background="@drawable/activity_travels_search_bg"
            android:layout_width="67dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/tv_pay"
            android:textColor="@color/colorFAFAFA"
            android:gravity="center"
            android:textSize="10sp"
            android:text="付款"
            android:layout_marginRight="14dp"
            android:background="@drawable/activity_activate_detail_bg"
            android:layout_width="67dp"
            android:layout_height="24dp" />

    </LinearLayout>
</LinearLayout>
