<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:src="@drawable/activity_travels_bg_test" />

    <WebView
        android:id="@+id/wv_html"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </WebView>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/meLine" />

    <LinearLayout style="@style/activityDeliciousDetailLl">

        <com.example.administrator.travel.ui.view.FontsIconTextView
            style="@style/activityDeliciousDetailTvIcon"
            android:text="@string/activity_add_detail_line" />

        <TextView
            style="@style/activityDeliciousDetailTvName"
            android:text="计划路线" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_add_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/meLine" />

    <LinearLayout style="@style/activityDeliciousDetailLl">

        <com.example.administrator.travel.ui.view.FontsIconTextView
            style="@style/activityDeliciousDetailTvIcon"
            android:text="@string/activity_add_detail_team_profile" />

        <TextView
            style="@style/activityDeliciousDetailTvName"
            android:text="队伍简介" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            />

        <include layout="@layout/activity_common_appoint_detail" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dp">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="53dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/Ffbf75"
            android:gravity="center"
            android:textColor="@color/colorFAFAFA"
            android:textSize="12sp" />

        <TextView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:background="@drawable/activity_travels_detail_money_bg"
            android:gravity="center"
            android:text="筹"
            android:textColor="@color/colorFAFAFA"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        style="@style/activityDeliciousDetailTvName"
        android:text="成员组成" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/meLine" />

    <LinearLayout style="@style/activityDeliciousDetailLl">

        <com.example.administrator.travel.ui.view.FontsIconTextView
            style="@style/activityDeliciousDetailTvIcon"
            android:text="@string/activity_circle_discuss" />

        <TextView
            style="@style/activityDeliciousDetailTvName"
            android:text="实话实说" />
    </LinearLayout>

    <com.example.administrator.travel.ui.view.ToShowAllListView
        android:id="@+id/lv_discuss"
        style="@style/XScrollViewListViewCommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.administrator.travel.ui.view.ToShowAllListView>
</LinearLayout>

