<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonTotalHeight">
        <View
            android:id="@+id/bg_1"
            android:alpha="0.28"
            android:background="@color/otherTitleBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonTotalHeight"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="@dimen/commonStatusHeight">

            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_back"
                style="@style/backFontsIcon"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="预览"
                android:textColor="#fafafa"
                android:textSize="18sp" />
            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_cancel"
                android:text="@string/activity_aite_ok"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/colorFAFAFA"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingRight="12dp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"

        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:alpha="0.28"
            android:background="@color/otherTitleBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_alignParentRight="true"
            android:textColor="@color/colorFAFAFA"
            android:id="@+id/tv_send"
            android:text="发送"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>
