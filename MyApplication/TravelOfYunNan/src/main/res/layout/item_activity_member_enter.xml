<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="14dp"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/appoint_icon_test" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="憨豆先生"
                        android:textColor="#444444"
                        android:textSize="12sp" />

                    <com.example.administrator.travel.ui.view.FontsIconTextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="@string/activity_member_detail_boy"
                        android:textColor="@color/color97bcf0"
                        android:textSize="12sp" />

                    <com.example.administrator.travel.ui.view.FontsIconTextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="@string/activity_member_detail_age"
                        android:textColor="@color/Ffbf75"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="125岁"
                        android:textColor="@color/color767676"
                        android:textSize="11sp" />
                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_ok_text"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:text="诚意邀请"
                    android:textSize="12sp"
                    android:textColor="@color/Ffbf75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.example.administrator.travel.ui.view.FontsIconTextView
                    android:id="@+id/tv_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_aite_ok"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="20sp" />

                <com.example.administrator.travel.ui.view.FontsIconTextView
                    android:layout_marginLeft="19dp"
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_member_detail_delete"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_discuss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:orientation="horizontal"
                android:paddingTop="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【留言】"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_discuss"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我还有一位小伙伴我还有一位小伙伴我还有一位小伙伴我还有一位小伙伴，"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_cat_all"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/down"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10sp"
            android:text="5分钟前"
            android:textColor="#c3c3c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="67dp"
        android:background="@color/meLine" />

</LinearLayout>
