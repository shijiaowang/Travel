<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/homeTitleBg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/homeTitleBg">

        <TextView
            android:id="@+id/tv_back"
            style="@style/backFontsIcon"
            android:layout_marginLeft="12dp"
            android:text="@string/activity_circle_back_font_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消息中心"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/activity_message_center_more"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
   >

        <TextView
            android:id="@+id/tv_system"
            android:textSize="14sp"
            android:textColor="#686868"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="系统消息" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_private"
            android:textSize="14sp"
            android:textColor="#686868"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="私信" />

    </LinearLayout>
    <View
        android:id="@+id/v_cursor"
        android:background="@color/homeTitleBg"
        android:layout_marginLeft="35dp"
        android:layout_width="96dp"
        android:layout_height="2dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/meLine" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_message_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>

</LinearLayout>
