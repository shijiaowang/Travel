<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorFAFAFA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginTop="15dp"
        android:id="@+id/iv_spot"
        android:layout_width="115dp"
        android:layout_height="80dp" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/ll_des"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/iv_spot"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            style="@style/commonSingleLineTextStyle"
            android:id="@+id/tv_name"
            android:textColor="@color/color323232"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/rb_star"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:numStars="5"
            android:isIndicator="true"
            android:maxHeight="18dp"
            android:progressDrawable="@drawable/activity_delicious_food_star"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:text="@string/item_fragment_find_add"
                android:textColor="@color/colorC1c1c1"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_add"
                style="@style/commonSingleLineTextStyle"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorC1c1c1"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <com.example.administrator.travel.ui.view.FontsIconTextView
        android:id="@+id/tv_select"
        android:textColor="@color/colorb5b5b5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:text="@string/activity_aite_ok"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_spot"
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>
