<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efeff4"
        android:orientation="vertical"
        tools:context=".ui.me.myalbum.createalbum.CreateAlbumActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/activity_create_bg">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_set_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp"
                android:drawableLeft="@drawable/activity_create_album_set"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="设置封面"
                android:textColor="#fafafa"
                android:textSize="12sp" />

            <EditText
                android:maxLength="10"
                android:id="@+id/ed_set_name"
                android:layout_width="254dp"
                android:layout_height="39dp"
                android:layout_below="@id/tv_set_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:background="@drawable/activity_create_album_set_name_bg"
                android:gravity="center"
                android:lines="1"
                android:hint="请设置相册名称"
                android:textColorHint="#fafafa"
                android:textColor="#fafafa"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorFAFAFA"
            android:layout_width="315dp"
            android:layout_height="170dp">
            <EditText
                android:maxLength="80"
                android:padding="10dp"
                android:id="@+id/et_des"
                android:gravity="start"
                android:textSize="12sp"
                android:textColor="@color/colorC1c1c1"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/ll_des"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.administrator.travel.ui.view.FontsIconTextView
                    android:text="@string/activity_activate_detail_pen"
                    android:textColor="@color/colorC1c1c1"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="相册简介"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorC1c1c1"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_count"
                android:textColor="@color/colorC1c1c1"
                android:textSize="12sp"
                android:text="0/80"
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/activity_create_album_complete"
            android:gravity="center"
            android:text="完成"
            android:textColor="#fafafa"
            android:textSize="18sp" />
    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <View
        android:id="@+id/v_bottom"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    </LinearLayout>

