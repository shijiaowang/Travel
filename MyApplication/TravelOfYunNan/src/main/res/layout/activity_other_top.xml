<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                 />
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

           </RelativeLayout>
            <TextView
                android:id="@+id/tv_user_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="129dp"
                android:textColor="#fafafa"
                android:textSize="19sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_icon"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="163dp"
           />


            <TextView
                android:id="@+id/tv_level"
                android:layout_width="52dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="85dp"
                android:background="@drawable/fragment_me_lv_bg"
                android:gravity="center"
                android:textColor="#fcae04"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="213dp"
                android:layout_toRightOf="@id/iv_icon"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_private"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activity_other_private_bg"
                    android:gravity="center">

                    <com.example.administrator.travel.ui.view.FontsIconTextView
                        android:id="@+id/tv_private_icon"
                        style="@style/activityOtherFollow"
                        android:text="@string/activity_other_private_message" />

                    <TextView
                        style="@style/activityOtherFollow"
                        android:layout_marginLeft="6dp"
                        android:text="私信" />

                </LinearLayout>

                <View style="@style/AVGLine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:id="@+id/tv_fan_sum" />

                <View style="@style/AVGLine" />

                <LinearLayout
                    android:id="@+id/ll_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/activity_other_private_bg"
                    android:gravity="center">

                    <com.example.administrator.travel.ui.view.FontsIconTextView
                        android:id="@+id/tv_follow_icon"
                        style="@style/activityOtherFollow"
                        android:text="@string/activity_other_follow" />

                    <TextView
                        android:id="@+id/tv_follow"
                        style="@style/activityOtherFollow"
                        android:layout_marginLeft="6dp"
                        android:text="关注" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:textColor="#323232"
            android:textSize="14sp" />

        <View
            style="@style/fragmentMeLine"
            android:layout_margin="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="@string/activity_other_title"
                android:textColor="#646464"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/tv_title_icon"
                android:text="称号"
                android:textColor="#646464"
                android:textSize="13sp" />

            <View
                android:id="@+id/pb_load"
                android:visibility="invisible"
                android:layout_width="61dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/activity_other_title_load" />
            <LinearLayout
                android:id="@+id/ll_new_user"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginBottom="23dp"
                android:layout_marginTop="48dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/activity_other_new_user"
                    android:textSize="11sp"
                    android:textColor="#ffc684"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="新手上路"
                    android:layout_marginLeft="10dp"
                    android:textSize="11sp"
                    android:textColor="#ffc684"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fl_title"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="26dp"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:dividerDrawable="@drawable/flexbox_space"
                app:flexWrap="wrap"
                app:showDivider="middle"
                android:layout_centerInParent="true"
                android:paddingTop="30dp">

            </com.google.android.flexbox.FlexboxLayout>


        </RelativeLayout>
</LinearLayout>
