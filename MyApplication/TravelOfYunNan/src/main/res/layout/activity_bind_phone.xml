<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical"
  >
    <com.yunspeak.travel.ui.view.LoginEditText
        android:id="@+id/et_phone"
        style="@style/activityRegisterEditText"
        app:line_edittext_hint="请输入手机号"
        app:line_edittext_image_src="@drawable/login_phone"
        app:line_edittext_input_left="@dimen/x15"
        app:line_edittext_max_length="11" />
    <com.yunspeak.travel.ui.view.LoginEditText
        android:id="@+id/et_ver"
        style="@style/activityRegisterEditText"
        app:line_edittext_image_src="@drawable/login_message"
        app:line_edittext_input_left="@dimen/x9"
        app:line_edittext_hint="请输入短信验证码"
        app:line_edittext_show_send_button="true"
        app:line_edittext_max_length="6" />
    <com.yunspeak.travel.ui.view.AvoidFastButton
        android:id="@+id/bt_next"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x37"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x31"
        android:layout_marginTop="@dimen/x47"
        android:background="@drawable/login_button_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/colorFAFAFA"
        android:textSize="@dimen/x18sp" />

</LinearLayout>