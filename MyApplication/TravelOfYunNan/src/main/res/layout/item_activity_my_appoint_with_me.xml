<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:elevation="1dp"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:background="@color/colorFAFAFA"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32">
            <TextView
                android:id="@+id/tv_appointing"
                android:layout_marginLeft="@dimen/x13"
                android:textSize="@dimen/x13sp"
                android:textColor="@color/otherTitleBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_price"
                android:textColor="@color/otherFf7f6c"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x9"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/x13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/meLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>
        <LinearLayout
            android:layout_marginTop="@dimen/x7"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginBottom="@dimen/x11"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <com.facebook.drawee.view.SimpleDraweeView
               android:id="@+id/iv_icon"
               android:layout_gravity="center_vertical"
               android:layout_width="@dimen/x80"
               android:layout_height="@dimen/x80" />

            <include layout="@layout/activity_my_appoint_common"/>

            <LinearLayout
                android:elevation="3dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/ll_enter"
                android:layout_marginRight="@dimen/x15"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="@dimen/x50"
                android:background="@drawable/activity_my_appoint_number_bg"
                android:layout_height="@dimen/x50">
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_enter_people"
                    android:textColor="@color/colorFAFAFA"
                    android:textSize="@dimen/x12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x13"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_end_day"
                android:textSize="@dimen/x13sp"
                android:textColor="@color/otherTitleBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_surplus_day"
                android:layout_marginLeft="@dimen/x20"
                android:textSize="@dimen/x13sp"
                android:textColor="@color/otherTitleBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="@color/meLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>
        <include layout="@layout/appoint_bottom_common"/>
    </LinearLayout>
</RelativeLayout>
