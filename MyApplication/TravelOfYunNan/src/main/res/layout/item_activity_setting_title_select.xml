<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/activity_my_appoint_rl_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp">

        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:textColor="@color/otherTitleBg"
                android:textSize="14sp" />
        </RelativeLayout>

        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:layout_toRightOf="@id/rl_right"
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="@string/activity_member_detail_delete"
            android:textColor="@color/colorFf8076"
            android:textSize="10sp" />

    </RelativeLayout>

</RelativeLayout>
