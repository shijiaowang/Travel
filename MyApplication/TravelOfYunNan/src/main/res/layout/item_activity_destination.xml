<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="15dp"
    android:background="@color/colorFAFAFA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_food_name"
        android:scaleType="fitXY"
        android:src="@drawable/test_icon2"
        android:layout_width="115dp"
        android:layout_height="80dp" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginRight="80dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/iv_food_name"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:text="苍山"
            android:textColor="@color/color323232"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RatingBar

            android:id="@+id/rb_star"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:numStars="5"
            android:isIndicator="true"
            android:maxHeight="18dp"
            android:progressDrawable="@drawable/activity_delicious_food_star"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_add"
                android:text="@string/item_fragment_find_add"
                android:textColor="@color/colorC1c1c1"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorC1c1c1"
                android:textSize="12sp"
                android:text="位置: 昆明和谐世界"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_food_name"
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>
