<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <com.yunspeak.travel.ui.view.FontsIconTextView
        android:id="@+id/tv_add"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/activity_my_album_add_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="@string/activity_my_album_add"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_create_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="创建新相册"
        android:textColor="@color/homeButtonUnCheckedColor"
        android:textSize="13sp" />

    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_sum"
        android:layout_width="109dp"
        android:layout_height="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/activity_my_album_sum_bg"
        android:gravity="center"
        android:text="@string/total_album"
        android:textColor="#fcae04"
        android:textSize="10sp" />
</LinearLayout>
