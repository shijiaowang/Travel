<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical"
    android:paddingBottom="40dp">


    <View
        style="@style/fragmentMeLine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <RelativeLayout style="@style/activityTravelsPlanRl">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            style="@style/activityTravelsPlanTv"
            android:text="@string/activity_add_detail_line" />

        <TextView
            style="@style/activityTravelsPlanDes"
            android:text="路线计划" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_select_line"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/activity_travels_plan_line_bg"
        android:gravity="center"
        android:text="选择路线"
        android:textColor="@color/colorFAFAFA"
        android:textSize="16sp" />

    <View
        style="@style/fragmentMeLine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <RelativeLayout style="@style/activityTravelsPlanRl">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            style="@style/activityTravelsPlanTv"
            android:text="@string/activity_travels_plan_car" />

        <TextView
            style="@style/activityTravelsPlanDes"
            android:text="交通计划" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="14dp">

        <TextView
            style="@style/activityTravelsPlanTvTime"
            android:layout_marginLeft="53dp"
            android:text="交通方式" />

        <RelativeLayout
            android:id="@+id/rl_traffic"
            android:layout_width="105dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/activity_travels_plan_time_bg">

            <TextView
                android:id="@+id/tv_traffic"
                android:layout_width="84dp"
                android:layout_height="23dp"
                android:gravity="center"
                android:text="自驾车"
                android:textColor="@color/color323232"
                android:textSize="15sp" />

            <com.yunspeak.travel.ui.view.FontsIconTextView
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/activity_travels_plan_time_bg"
                android:gravity="center"
                android:text="▼"
                android:textColor="@color/color323232"
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            style="@style/activityTravelsPlanTvTime"
            android:layout_gravity="start"
            android:layout_marginLeft="53dp"
            android:text="@string/activity_travels_plan_remark" />

        <EditText
            android:id="@+id/et_remark"
            android:layout_width="191dp"
            android:layout_height="74dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/activity_travels_plan_ed_bg"
            android:gravity="start"
            android:hint="(备注)"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:textColorHint="@color/colorb5b5b5"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>
