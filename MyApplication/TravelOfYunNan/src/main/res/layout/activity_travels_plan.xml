<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="159dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/activity_line_plan_add_bg"
                android:gravity="center"
                android:text="您的自拍"
                android:textColor="@color/colorb5b5b5"
                android:textSize="16sp" />

            <LinearLayout style="@style/activityTravelsPlanRl">

                <com.example.administrator.travel.ui.view.FontsIconTextView
                    style="@style/activityTravelsPlanTv"
                    android:gravity="center_vertical"
                    android:text="@string/activity_travels_plan_time" />

                <TextView
                    style="@style/activityTravelsPlanTv"
                    android:layout_marginLeft="15dp"
                    android:text="时间计划" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="共计三天两晚"
                    android:textColor="@color/color909090"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    style="@style/activityTravelsPlanTvTime"
                    android:text="出发日期" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/activityTravelsPlanTvTimeSelect"
                        android:text="01/03/2016" />

                    <com.example.administrator.travel.ui.view.FontsIconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="@string/activity_travels_plan_data"
                        android:textColor="@color/otherTitleBg"
                        android:textSize="20sp" />

                    <com.example.administrator.travel.ui.view.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="31dp"
                        android:text="@string/activity_aite_ok"
                        app:gradient_checked_down_color="#5ad7fb"
                        app:gradient_checked_up_color="#5febb0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="上午"
                        android:textColor="@color/color323232"
                        android:textSize="12sp" />

                    <com.example.administrator.travel.ui.view.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/activity_aite_ok"
                        app:gradient_checked_down_color="#5ad7fb"
                        app:gradient_checked_up_color="#5febb0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="下午"
                        android:textColor="@color/color323232"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    style="@style/activityTravelsPlanTvTime"
                    android:layout_marginTop="20dp"
                    android:text="出发日期" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/activityTravelsPlanTvTimeSelect"
                        android:text="01/03/2016" />

                    <com.example.administrator.travel.ui.view.FontsIconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="@string/activity_travels_plan_data"
                        android:textColor="@color/otherTitleBg"
                        android:textSize="20sp" />

                    <com.example.administrator.travel.ui.view.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="31dp"
                        android:text="@string/activity_aite_ok"
                        app:gradient_checked_down_color="#5ad7fb"
                        app:gradient_checked_up_color="#5febb0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="上午"
                        android:textColor="@color/color323232"
                        android:textSize="12sp" />

                    <com.example.administrator.travel.ui.view.GradientTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/activity_aite_ok"
                        app:gradient_checked_down_color="#5ad7fb"
                        app:gradient_checked_up_color="#5febb0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="下午"
                        android:textColor="@color/color323232"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/fragmentMeLine"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />

            <LinearLayout style="@style/activityTravelsPlanRl">

                <com.example.administrator.travel.ui.view.FontsIconTextView
                    style="@style/activityTravelsPlanTv"
                    android:gravity="center_vertical"
                    android:text="@string/activity_add_detail_line" />

                <TextView
                    style="@style/activityTravelsPlanTv"
                    android:layout_marginLeft="15dp"
                    android:text="路线计划" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_select_line"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/activity_travels_plan_line_bg"
                android:gravity="center"
                android:text="选择路线"
                android:textColor="@color/colorFAFAFA"
                android:textSize="16sp" />

            <View
                style="@style/fragmentMeLine"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />

            <LinearLayout style="@style/activityTravelsPlanRl">

                <com.example.administrator.travel.ui.view.FontsIconTextView
                    style="@style/activityTravelsPlanTv"
                    android:gravity="center_vertical"
                    android:text="@string/activity_travels_plan_car" />

                <TextView
                    style="@style/activityTravelsPlanTv"
                    android:layout_marginLeft="15dp"
                    android:text="交通计划" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="14dp">

                <TextView
                    style="@style/activityTravelsPlanTvTime"
                    android:layout_marginLeft="53dp"
                    android:text="交通方式" />

                <RelativeLayout
                    android:layout_width="105dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/activity_travels_plan_time_bg">

                    <TextView
                        android:layout_width="84dp"
                        android:layout_height="23dp"
                        android:gravity="center"
                        android:text="自驾车"
                        android:textColor="@color/color323232"
                        android:textSize="15sp" />

                    <com.example.administrator.travel.ui.view.FontsIconTextView
                        android:layout_width="22dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/activity_travels_plan_time_bg"
                        android:gravity="center"
                        android:text="▼"
                        android:textColor="@color/color323232"
                        android:textSize="10sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/activityTravelsPlanTvTime"
                    android:layout_gravity="start"
                    android:layout_marginLeft="53dp"
                    android:text="@string/activity_travels_plan_remark" />

                <EditText
                    android:layout_width="191dp"
                    android:layout_height="74dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/activity_travels_plan_ed_bg"
                    android:gravity="start"
                    android:hint="(备注)"
                    android:paddingBottom="5dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/colorb5b5b5"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/otherTitleBg"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/colorFAFAFA"
        android:textSize="15sp" />

</LinearLayout>
