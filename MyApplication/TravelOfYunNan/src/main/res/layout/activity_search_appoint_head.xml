<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/app_bar_layout"
        android:background="@color/meLine"
        android:layout_width="match_parent"
         android:elevation="2dp"
        android:layout_height="wrap_content"
        android:theme="@style/toolbar_theme">


    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorFAFAFA"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/x42">
        <TextView
            android:text="一起玩"
            android:id="@+id/tv_select"
            android:textColor="@color/otherTitleBg"
            android:textSize="@dimen/x15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x6"
            android:drawableRight="@drawable/trangle_pull"
            />
        <LinearLayout
            android:background="@drawable/activity_search_appoint_search_bg"
            android:layout_marginLeft="@dimen/x39"
            android:layout_width="@dimen/x200"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:layout_height="@dimen/x28">

            <EditText
                android:id="@+id/et_search"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="@dimen/x12sp"
                android:background="@null"
                android:gravity="center"
                android:imeOptions="actionSearch"
                android:hint="搜索约伴口令/目的地/标签"
                android:textColorHint="@color/colorC1c1c1"
                android:textColor="@color/color646464"
                android:layout_height="match_parent"
                />

            <com.yunspeak.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_search"
                android:background="@drawable/normal_press_bg"
                android:gravity="center"
                android:textSize="@dimen/x15sp"
                android:text="@string/fragment_circle_search"
                android:textColor="@color/colorC1c1c1"
                android:layout_width="@dimen/x30"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@color/colorFAFAFA"
            android:orientation="horizontal">

            <View style="@style/fragmentAppointTitleLine" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/fragmentAppointTitleText"
                android:text="类型" />

            <View style="@style/fragmentAppointTitleLine" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/fragmentAppointTitleText"
                android:text="出发时间" />

            <TextView
                android:id="@+id/tv_order"
                style="@style/fragmentAppointTitleText"
                android:text="排序" />
        </LinearLayout>

</android.support.design.widget.AppBarLayout>
