<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_left"
        android:paddingRight="75dp">

        <include
            layout="@layout/activity_chat_common_left" />

        <TextView
            android:id="@+id/tv_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:background="@drawable/chat_other"
            android:gravity="center"
            android:minHeight="32dp"
            android:minWidth="72dp"
            android:layout_marginTop="30dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_right"
        android:paddingLeft="75dp"
       >

        <include
            layout="@layout/activity_chat_common_right" />

        <TextView
            android:text="woshyou"
            android:id="@+id/tv_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="58dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/chat_me"
            android:gravity="center"
            android:minHeight="32dp"
            android:minWidth="72dp" />


    </RelativeLayout>
</LinearLayout>