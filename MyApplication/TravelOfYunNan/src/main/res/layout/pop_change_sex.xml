<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x200"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/appoint_enter_dialog_bg"
    android:layout_height="@dimen/x160">
    <TextView
        android:text="性别设置"
        android:gravity="center"
        android:background="@color/otherTitleBg"
        android:textColor="@color/colorFAFAFA"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <RadioButton
        android:id="@+id/rb_boy"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="男"
        android:textColor="@color/color323232"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <View
        android:layout_width="match_parent"
        android:background="@color/meLine"
        android:layout_height="1dp"/>
    <RadioButton
        android:id="@+id/rb_girl"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="女"
        android:textColor="@color/color323232"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/tv_cancel"
        android:paddingLeft="10dp"
        android:textColor="@color/color646464"
        android:textSize="13sp"
        android:text="取消"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="39dp" />

</RadioGroup>
