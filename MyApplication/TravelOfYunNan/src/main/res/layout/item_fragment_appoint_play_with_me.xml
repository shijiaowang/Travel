<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingBottom="9dp"
       android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingLeft="14dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/activity_common_appoint_detail"/>
        <ImageView
            android:src="@drawable/fragment_appoint_icon_test"
            android:layout_width="112dp"
            android:layout_height="112dp" />
        
    </LinearLayout>
    <com.example.administrator.travel.ui.view.FlowLayout
        android:layout_marginLeft="15dp"
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.administrator.travel.ui.view.FlowLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textSize="11sp"
            android:textColor="@color/colorFAFAFA"
            android:text="预算¥222220"
            android:gravity="center"
            android:background="@drawable/fragment_play_with_me_money_bg"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/colorFAFAFA"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_icon_eye"
            android:text="@string/activity_other_album_eye"
            style="@style/fragmentAppointBottomText"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:text="11"
            style="@style/fragmentAppointBottomText"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:id="@+id/tv_icon_love"
            android:text="@string/activity_circle_love_empty"
            style="@style/fragmentAppointBottomText"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:text="11"
            style="@style/fragmentAppointBottomText"
            android:layout_marginLeft="6dp"
            />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="5分钟前"
            android:textColor="@color/color969696"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            style="@style/fragmentAppointBottomText"
            />



    </LinearLayout>



</LinearLayout>
