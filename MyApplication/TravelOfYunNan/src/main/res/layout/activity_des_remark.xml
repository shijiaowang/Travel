<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <RelativeLayout
            style="@style/activityTravelsPlanRl"
            android:layout_marginTop="35dp">

            <com.example.administrator.travel.ui.view.FontsIconTextView
                style="@style/activityTravelsPlanTv"
                android:text="@string/activity_des_remark_title" />

            <TextView
                android:id="@+id/tv_equ"
                style="@style/activityTravelsPlanDes"
                android:text="道具租用" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_equ"
                android:text="最多显示7个标签"
                android:textColor="@color/color909090"
                android:textSize="12sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/bt_select_equ"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/activity_travels_plan_line_bg"
            android:gravity="center"
            android:text="选择编辑"
            android:textColor="@color/colorFAFAFA"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@color/meLine" />

        <RelativeLayout
            style="@style/activityTravelsPlanRl"
            android:layout_marginTop="35dp">

            <com.example.administrator.travel.ui.view.FontsIconTextView
                style="@style/activityTravelsPlanTv"
                android:text="@string/activity_des_remark_des" />

            <TextView
                android:id="@+id/tv_e"
                style="@style/activityTravelsPlanDes"
                android:text="约伴简介" />
        </RelativeLayout>

        <EditText
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="请输入标题(20字内)"
            android:maxLength="20"
            android:paddingLeft="5dp"
            android:textColor="@color/color646464"
            android:textColorHint="@color/color646464"
            android:textSize="13sp" />

        <View
            android:layout_width="263dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorb5b5b5" />

        <RelativeLayout
            android:layout_width="263dp"
            android:layout_height="114dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <EditText
                android:layout_width="263dp"
                android:layout_height="114dp"
                android:background="@drawable/activity_des_remark_bg"
                android:maxLength="200" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:text="10/200"
                android:textColor="@color/colorb5b5b5"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/otherTitleBg"
        android:gravity="center"
        android:text="发布约伴"
        android:textColor="@color/colorFAFAFA"
        android:textSize="15sp" />
</LinearLayout>
