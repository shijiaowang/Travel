<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="0dp"
            style="@style/fragmentAppointWithMeLl">
            <com.yunspeak.travel.ui.view.FontsIconTextView
                android:text="@string/fragment_play_with_me_air"
                style="@style/fragmentAppointWithMeIconFont"/>
            <TextView
                android:id="@+id/tv_dream"
                style="@style/fragmentAppointWithMeText"/>

        </LinearLayout>
        <LinearLayout

            style="@style/fragmentAppointWithMeLl">
            <com.yunspeak.travel.ui.view.FontsIconTextView
                android:textColor="@color/otherTitleBg"
                android:text="@string/fragment_play_with_me_time"
                style="@style/fragmentAppointWithMeIconFont"/>
            <TextView
                android:id="@+id/tv_time"
                android:textSize="@dimen/x10sp"
                android:textColor="@color/otherTitleBg"
                style="@style/fragmentAppointWithMeText"/>

        </LinearLayout>
        <LinearLayout

            style="@style/fragmentAppointWithMeLl">
            <com.yunspeak.travel.ui.view.FontsIconTextView
                android:text="@string/fragment_play_with_me_add"
                style="@style/fragmentAppointWithMeIconFont"/>
            <TextView
                android:id="@+id/tv_start_and_long"
                android:textColor="@color/color646464"
                style="@style/fragmentAppointWithMeText"/>

        </LinearLayout>
        <LinearLayout
            style="@style/fragmentAppointWithMeLl">
            <com.yunspeak.travel.ui.view.FontsIconTextView
                android:textStyle="italic"
                android:text="@string/fragment_play_with_me_people"
                style="@style/fragmentAppointWithMeIconFont"/>
            <TextView
                android:id="@+id/tv_have_number"
                android:textColor="@color/color646464"
                style="@style/fragmentAppointWithMeText"/>

        </LinearLayout>


    </LinearLayout>


