<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.yunspeak.travel.ui.view.LoginEditText
        android:id="@+id/et_phone"
        style="@style/activityRegisterEditText"
        app:line_edittext_hint="请输入手机号"
        app:line_edittext_image_src="@drawable/login_phone"
        app:line_edittext_input_left="15dp"
        app:line_edittext_max_length="11" />
    <com.yunspeak.travel.ui.view.LoginEditText
        android:id="@+id/et_ver"
        style="@style/activityRegisterEditText"
        app:line_edittext_image_src="@drawable/login_message"
        app:line_edittext_input_left="9dp"
        app:line_edittext_hint="请输入短信验证码"
        app:line_edittext_show_send_button="true"
        app:line_edittext_max_length="6" />
    <com.yunspeak.travel.ui.view.LoginEditText
        android:id="@+id/et_password"
        style="@style/activityRegisterEditText"
        app:line_edittext_input_left="15dp"
        app:line_edittext_max_length="20"
        app:line_edittext_hint="请输入密码密码" />
    <com.yunspeak.travel.ui.view.LoginEditText
        android:id="@+id/et_re_password"
        style="@style/activityRegisterEditText"
        app:line_edittext_input_left="15dp"
        app:line_edittext_max_length="20"
        app:line_edittext_hint="请再次输入密码密码" />
    <com.yunspeak.travel.ui.view.AvoidFastButton
        android:id="@+id/bt_next"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="31dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/login_button_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/colorFAFAFA"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="点击下一步即表示同意云说软件许可及服务协议"
        android:textColor="@color/color646464"
        android:textSize="11sp" />

</LinearLayout>
