<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/meLine"
    android:focusable="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorFAFAFA"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="16dp"
                android:layout_height="26dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/chat_voice" />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/chat_input_bg"
                android:textColor="@color/color646464"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_voice"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/chat_input_bg"
                android:gravity="center"
                android:textColor="@color/color646464"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_emoji"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/chat_emoj" />

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/chat_open_picture" />

            <Button
                android:id="@+id/bt_send"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@color/otherTitleBg"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/colorFAFAFA"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_picture"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/activity_picture"
                android:gravity="center"
                android:text="图片"
                android:textColor="@color/colorb5b5b5"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:drawablePadding="7dp"
                android:drawableTop="@drawable/activity_address"
                android:gravity="center"
                android:text="位置"
                android:textColor="@color/colorb5b5b5"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

 <android.support.v4.widget.SwipeRefreshLayout
     android:id="@+id/swipe_container"
     android:layout_width="match_parent"
     android:layout_above="@id/ll_bottom"
     android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="11dp"
        android:id="@id/swipe_target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
       />
 </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
