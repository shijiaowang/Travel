<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/fragment_me_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_icon"
            android:layout_marginTop="163dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fragment_me_icon"
            android:layout_width="73dp"
            android:layout_height="73dp" />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/fragment_me_setting_small"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:textColor="#fcae04"
            android:textSize="14sp"
            android:text="Lv.1"
            android:gravity="center"
            android:background="@drawable/fragment_me_lv_bg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="85dp"
            android:layout_width="52dp"
            android:layout_height="29dp" />
        <TextView
            android:layout_marginTop="129dp"
            android:layout_centerHorizontal="true"
            android:textSize="19sp"
            android:textColor="#fafafa"
            android:text="岳阳"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_below="@id/civ_icon"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="关注"
                android:textSize="14sp"
                android:textColor="@color/homeButtonUnCheckedColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="6dp"
                android:text="12"
                android:textSize="14sp"
                android:textColor="@color/homeButtonUnCheckedColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/fragment_me_dot"
                android:layout_width="3dp"
                android:layout_height="3dp" />
            <TextView
                android:text="粉丝"
                android:textSize="14sp"
                android:textColor="@color/homeButtonUnCheckedColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="6dp"
                android:text="35"
                android:textSize="14sp"
                android:textColor="@color/homeButtonUnCheckedColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="26dp"
        android:textColor="#323232"
        android:textSize="14sp"
        android:text="你是风儿他是啥，你是风儿他是啥你是风儿他是啥你是风儿他是啥你是风儿他是啥"
