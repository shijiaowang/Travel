<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.administrator.travel.ui.view.CustomScrollView
        android:id="@+id/sv_move"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <include layout="@layout/activity_other_top" />

            <View
                style="@style/fragmentMeLine"
                android:layout_margin="0dp" />

            <LinearLayout
                android:id="@+id/ll_cursor"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_album"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="相册"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_dynamic"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="动态"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="信息"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                style="@style/fragmentMeLine"
                android:layout_height="4dp"
                android:layout_margin="0dp" />
            <!--  <android.support.v4.view.ViewPager
                  android:id="@+id/vp_dynamic"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1">
              </android.support.v4.view.ViewPager>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/activity_other_album" />

                <include layout="@layout/activity_other_dynamic" />

                <include layout="@layout/activity_other_information" />


            </RelativeLayout>

        </LinearLayout>
    </com.example.administrator.travel.ui.view.CustomScrollView>
    <View
        android:background="@color/homeTitleBg"
        android:alpha="0"

        android:id="@+id/v_height"
        android:layout_width="match_parent"
        android:layout_height="67dp"/>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        android:id="@+id/ll_fly"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_fly_album"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="相册"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_fly_dynamic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="动态"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_fly_info"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="信息"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>