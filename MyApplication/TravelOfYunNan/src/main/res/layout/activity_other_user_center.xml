<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/fragment_me_bg" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="129dp"
            android:text="岳阳"
            android:textColor="#fafafa"
            android:textSize="19sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_icon"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="163dp"
            android:src="@drawable/fragment_me_icon" />


        <TextView
            android:layout_width="52dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="85dp"
            android:background="@drawable/fragment_me_lv_bg"
            android:gravity="center"
            android:text="Lv.1"
            android:textColor="#fcae04"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_marginLeft="13dp"
            android:layout_marginTop="213dp"
            android:layout_toRightOf="@id/civ_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/activity_other_private_bg"
                android:gravity="center"
                android:text="私信"
                android:textColor="#646464"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:layout_toRightOf="@id/tv_private"
                android:text="粉丝 111"
                android:textColor="#646464"
                android:textSize="13sp" />
            <CheckBox
                android:layout_marginLeft="35dp"
                android:id="@+id/tv_fllow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_other_follow_selector"
                android:gravity="center"
                android:text="关注"
                android:textColor="#646464"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
