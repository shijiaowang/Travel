<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:background="@drawable/activity_line_plan_add"
            android:gravity="center"
            android:text="集合地"
            android:textColor="@color/colorFAFAFA"
            android:textSize="13sp" />


        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:id="@+id/tv_start_add"
            android:layout_width="55dp"
            android:layout_height="27dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/tv_add"
            android:background="@drawable/activity_line_plan_add_bg"
            android:gravity="center"
            android:text="@string/activity_other_follow"
            android:textColor="@color/colorb5b5b5"
            android:textSize="18sp" />

    </LinearLayout>

    <com.yunspeak.travel.ui.view.DottedLineView
        android:id="@+id/end_line"
        android:layout_marginTop="-2dp"
        android:layout_width="2dp"
        android:layout_height="4dp"
        android:layout_marginLeft="79dp"
        android:layerType="software" />


</LinearLayout>
