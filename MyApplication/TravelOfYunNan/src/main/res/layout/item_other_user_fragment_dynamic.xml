<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fafafa"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x7"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_user_icon"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x12"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9f9f9f"
                android:textSize="@dimen/x12sp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"

                    android:textColor="#9f9f9f"
                    android:textSize="@dimen/x10sp" />
                <View
                    android:layout_marginRight="@dimen/x8"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_width="@dimen/x1"
                    android:layout_height="@dimen/x14"
                    android:layout_marginTop="@dimen/x10"
                    android:background="#9f9f9f"
                  />
                <TextView
                    android:id="@+id/tv_reply_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:textColor="#9f9f9f"
                    android:textSize="@dimen/x10sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x25"
        android:layout_marginTop="@dimen/x12"
        android:textColor="@color/otherTitleBg"
        android:textSize="@dimen/x14sp" />

    <TextView
        android:id="@+id/tv_discuss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_icon"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x5"
        android:textColor="#909090"
        android:textSize="@dimen/x12sp" />


    <LinearLayout
        android:layout_marginTop="@dimen/x5"
        android:layout_below="@id/tv_discuss"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="#e9e9e9" />
    <TextView
        android:id="@+id/tv_other_user"
        android:textColor="#909090"
        android:textSize="@dimen/x12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="#e9e9e9" />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x24">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/x1"/>
            <com.yunspeak.travel.ui.view.FontsIconTextView
                android:gravity="center"
                android:id="@+id/tv_icon"
                android:textColor="#ff7f6c"
                android:text="@string/activity_circle_love_full"
                android:layout_marginRight="@dimen/x6"
                android:textSize="@dimen/x12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_icon_number"
                android:textColor="@color/otherFf7f6c"
                android:layout_marginRight="@dimen/x27"
                android:textSize="@dimen/x10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
