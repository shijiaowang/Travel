<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:text="7月1日"
            android:textColor="@color/color646464"
            android:textSize="12sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/rl_day"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="19dp"
                android:background="@drawable/activity_line_plan_day_number_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textColor="@color/colorFAFAFA"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorFAFAFA"
                    android:textSize="9sp" />
            </LinearLayout>
            <com.example.administrator.travel.ui.view.DottedLineView
                android:id="@+id/iv_top_line"
                android:layout_marginLeft="9dp"
                android:layout_width="1dp"
                android:layout_height="20dp"
               />

            <ImageView
                android:id="@+id/iv_cursor"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/activity_line_add1" />


            <com.example.administrator.travel.ui.view.DottedLineView
                android:layout_marginLeft="9dp"
                android:id="@+id/dlv_line"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_cursor" />

            <LinearLayout
                android:id="@+id/ll_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_day"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/dlv_line"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_add"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="18sp"
                    android:text="@string/activity_other_follow"
                    android:gravity="center"
                    android:background="@drawable/activity_create_album_add_bg"
                    android:layout_width="70dp"
                    android:layout_height="30dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
