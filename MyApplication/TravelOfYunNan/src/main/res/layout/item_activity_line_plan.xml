<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x52"

        android:textColor="@color/color646464"
        android:textSize="@dimen/x12sp" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x59"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_day"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x29"
            android:layout_marginTop="@dimen/x45"
            android:background="@drawable/activity_line_plan_day_number_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textColor="@color/colorFAFAFA"
                android:textSize="@dimen/x9sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFAFAFA"
                android:textSize="@dimen/x9sp" />
        </LinearLayout>

       <com.yunspeak.travel.ui.view.ToShowAllListView
           android:id="@+id/lv_add"
           android:layout_marginLeft="@dimen/x37"
           style="@style/commonListViewStyle"
           android:listSelector="@android:color/transparent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:id="@+id/tv_add"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x37"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/activity_create_album_add_bg"
            android:gravity="center"
            android:text="@string/activity_other_follow"
            android:textColor="@color/otherTitleBg"
            android:textSize="@dimen/x18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x70"
        android:orientation="vertical">

        <com.yunspeak.travel.ui.view.DottedLineView
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/x51"
            android:layout_marginLeft="@dimen/x9" />

        <ImageView
            android:id="@+id/iv_cursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_line_add1" />

        <com.yunspeak.travel.ui.view.DottedLineView
            android:id="@+id/dlv_line"
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x57"
            android:layout_marginLeft="@dimen/x9" />

    </LinearLayout>


</RelativeLayout>
