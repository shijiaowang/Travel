<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_enter"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="18"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="标题(选填，最多输入18个字符。)"
                android:textColorHint="@color/color646464"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />

            <View
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc" />
            <LinearLayout
                android:id="@+id/ll_bar"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorFAFAFA"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/tv_emoji"
                    style="@style/activityCreatePostTvIcon"
                    android:layout_marginLeft="0dp"
                    android:text="@string/activity_create_post_smell" />

                <TextView
                    android:id="@+id/tv_picture"
                    style="@style/activityCreatePostTvIcon"
                    android:text="@string/activity_create_post_picture" />

                <TextView
                    android:id="@+id/tv_aite"
                    style="@style/activityCreatePostTvIcon"
                    android:text="@string/activity_create_post_aite" />

            </LinearLayout>
            <EditText
                android:id="@+id/et_content"
                android:layout_below="@id/et_enter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ll_bar"
                android:background="@null"
                android:gravity="left"
                android:hint="没病走两步"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/color969696"
                android:textSize="13sp" />



            <RelativeLayout
                android:layout_below="@id/ll_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ViewStub
                    android:id="@+id/vs_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ViewStub
                    android:id="@+id/vs_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
