<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_nitify_bg"
    android:layout_height="92dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">
          <ImageView
              android:src="@mipmap/yun_speak"
              android:scaleType="centerInside"
              android:layout_marginLeft="8dp"
              android:layout_centerVertical="true"
              android:layout_width="25dp"
              android:layout_height="25dp" />
        <TextView
            android:id="@+id/tv_text"
            android:textColor="@color/color969696"
            android:textSize="10sp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:background="@color/colorb5b5b5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:textColor="@color/color323232"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        style="@style/commonSingleLineTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_content"
        android:textColor="@color/color646464"
        android:textSize="11sp"
        android:ellipsize="end"
        android:lines="2"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
