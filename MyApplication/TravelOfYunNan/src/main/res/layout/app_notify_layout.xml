<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/app_nitify_bg"
    android:layout_height="@dimen/x80">
    <ImageView
        android:src="@mipmap/yun_speak"
        android:layout_marginTop="@dimen/x15"
        android:scaleType="centerInside"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/x35"
        android:layout_height="@dimen/x35" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/x10"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/x18"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/color323232"
            android:textSize="@dimen/x12sp"
            style="@style/commonSingleLineTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_content"
            android:textColor="@color/color646464"
            android:textSize="@dimen/x11sp"
            android:ellipsize="end"
            android:lines="2"
            android:lineSpacingExtra="@dimen/x3"
            android:layout_marginTop="@dimen/x9"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:textColor="@color/color969696"
            android:textSize="@dimen/x10sp"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/x18"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>
