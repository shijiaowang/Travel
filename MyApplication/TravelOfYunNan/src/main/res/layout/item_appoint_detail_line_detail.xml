<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/normal_press_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_bg"
        android:layout_width="@dimen/x168"
        android:layout_height="@dimen/x87" />
    <TextView
        android:layout_marginTop="@dimen/x10"
        android:id="@+id/tv_name"
        android:textColor="@color/color323232"
        android:textSize="@dimen/x16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/x10"
        android:id="@+id/tv_des"
        android:lineSpacingExtra="@dimen/x6"
        android:textColor="@color/color646464"
        android:textSize="@dimen/x12sp"
        android:lines="4"
        android:ellipsize="end"
        android:layout_width="@dimen/x180"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/x11"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:text="@string/item_fragment_find_add"
            android:textColor="@color/colorC1c1c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/x11sp"
            android:textColor="@color/colorC1c1c1"
            android:id="@+id/tv_address"
            style="@style/commonSingleLineTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/x25"/>
</LinearLayout>
