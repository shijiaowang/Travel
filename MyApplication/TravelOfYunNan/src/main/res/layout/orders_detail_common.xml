            android:layout_marginTop="14dp"
            android:text="先筹路费" />

        <TextView
            style="@style/activityConfirmOrdersTextMoney"
            android:layout_marginTop="41dp"
            android:text="¥3.00" />
    </RelativeLayout>

    <View style="@style/activityConfirmOrdersTextLine" />

    <RelativeLayout style="@style/activityConfirmOrdersRl">

        <TextView
            style="@style/activityConfirmOrdersText"
            android:text="个人旅游保险" />

        <TextView
            style="@style/activityConfirmOrdersTextMoney"
            android:text="¥1.00" />
    </RelativeLayout>

    <View style="@style/activityConfirmOrdersTextLine" />

    <RelativeLayout style="@style/activityConfirmOrdersRl">

        <TextView
            style="@style/activityConfirmOrdersText"
            android:text="平台服务费" />

        <TextView
            style="@style/activityConfirmOrdersTextMoney"
            android:text="¥1.00" />
    </RelativeLayout>

</LinearLayout>
