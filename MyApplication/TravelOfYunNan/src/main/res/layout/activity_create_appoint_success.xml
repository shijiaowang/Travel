<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="@dimen/x42"
        android:src="@drawable/activity_create_appoint_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/x33"
        android:text="恭喜您！ 发布约伴成功！"
        android:textColor="@color/color646464"
        android:textSize="@dimen/x15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_key"
        android:layout_marginTop="@dimen/x18"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="您的队伍口令为："
            android:textColor="@color/color646464"
            android:textSize="@dimen/x14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_code"
            android:textColor="@color/otherTitleBg"
            android:textSize="@dimen/x18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/x28"
        android:text="可以告诉小伙伴们您的口令，或通过下方分享，让他们快速找到您的约伴~"
        android:textColor="@color/color969696"
        android:gravity="center"
        android:textSize="@dimen/x14sp"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginLeft="@dimen/x45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="分享"
        android:textColor="@color/otherTitleBg"
        android:textSize="@dimen/x17sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/x31"
        android:background="@drawable/activity_my_appoint_rl_bg"
        android:layout_width="@dimen/x155"
        android:layout_height="@dimen/x40" />
    <Button
        android:text="进入我的约伴"
        android:textColor="@color/otherTitleBg"
        android:textSize="@dimen/x17sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/x25"
        android:background="@drawable/activity_my_appoint_rl_bg"
        android:layout_width="@dimen/x155"
        android:layout_height="@dimen/x40" />

</LinearLayout>
