<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorFAFAFA"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x165" />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x143"
        android:layout_marginRight="@dimen/x5"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_user_icon"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44" />
        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_marginTop="@dimen/x6"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color646464"
            android:textSize="@dimen/x9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_below="@id/iv_picture"
        android:layout_marginTop="@dimen/x10"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/x12"
        android:layout_marginLeft="@dimen/x10"
        android:textColor="@color/color323232"
        android:textSize="@dimen/x14sp"
        android:layout_marginRight="@dimen/x100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/x12"
        android:layout_below="@id/tv_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x10"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:paddingTop="@dimen/x1"
            android:text="@string/fragment_play_with_me_time"
            android:textColor="@color/color989898"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginLeft="@dimen/x5"
            android:textColor="@color/color989898"
            android:textSize="@dimen/x9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:paddingBottom="@dimen/x1"
            android:gravity="center"
            android:text="@string/activity_other_album_eye"
            android:layout_marginLeft="@dimen/x20"
            android:textColor="@color/color989898"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_watch_number"
            android:layout_marginLeft="@dimen/x5"
            android:textColor="@color/color989898"
            android:textSize="@dimen/x9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
