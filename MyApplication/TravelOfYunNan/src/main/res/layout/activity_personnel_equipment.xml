<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFAFAFA">

    <Button
        style="@style/commonButtonNext"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/activityTravelsPlanRl"
                android:layout_marginTop="@dimen/x36">

                <com.yunspeak.travel.ui.view.FontsIconTextView
                    style="@style/activityTravelsPlanTv"
                    android:text="@string/activity_personnel_equipment_people" />

                <TextView
                    style="@style/activityTravelsPlanDes"
                    android:text="人员计划" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x53"
                android:layout_marginTop="@dimen/x15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/activityTravelsPlanTvTime"
                        android:layout_height="@dimen/x23"
                        android:gravity="center_vertical"
                        android:text="约伴人数" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x24"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/activityTravelsPlanTv"
                                android:layout_marginRight="@dimen/x10"
                                android:text="至少" />

                            <EditText
                                android:inputType="number"
                                android:id="@+id/et_least"
                                style="@style/activityTravelsPlanTvTimeSelect"
                                android:layout_width="@dimen/x51"
                                android:gravity="start|center_vertical"
                                />

                            <TextView
                                style="@style/activityTravelsPlanTv"
                                android:layout_marginLeft="@dimen/x6"
                                android:text="人" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x24"
                            android:layout_marginTop="@dimen/x15"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/activityTravelsPlanTv"
                                android:layout_marginRight="@dimen/x10"
                                android:text="最多" />

                            <EditText
                                android:inputType="number"
                                android:id="@+id/et_most"
                                style="@style/activityTravelsPlanTvTimeSelect"
                                android:layout_width="@dimen/x51"
                                android:gravity="start|center_vertical"
                                 />

                            <TextView
                                style="@style/activityTravelsPlanTv"
                                android:layout_marginLeft="@dimen/x6"
                                android:text="人" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x13"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/activityTravelsPlanTvTime"
                        android:layout_height="@dimen/x23"
                        android:gravity="center_vertical"
                        android:text="认证筛选" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x24"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/activityTravelsPlanTv"
                                android:text="性别筛选" />

                            <RelativeLayout
                                android:id="@+id/rl_sex_select"
                                android:layout_width="@dimen/x105"
                                android:layout_height="@dimen/x23"
                                android:layout_marginLeft="@dimen/x16"
                                android:background="@drawable/activity_travels_plan_time_bg">

                                <TextView
                                    android:id="@+id/tv_sex"
                                    android:layout_width="@dimen/x84"
                                    android:layout_height="@dimen/x23"
                                    android:gravity="center"
                                    android:text="不限"
                                    android:textColor="@color/color323232"
                                    android:textSize="@dimen/x15sp" />

                                <TextView
                                    android:layout_width="@dimen/x22"
                                    android:layout_height="@dimen/x23"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/activity_travels_plan_time_bg"
                                    android:gravity="center"
                                    android:text="▼"
                                    android:textColor="@color/color323232"
                                    android:textSize="@dimen/x10sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x24"
                            android:layout_marginTop="@dimen/x15"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/activityTravelsPlanTv"
                                android:text="身份筛选" />

                            <RelativeLayout
                                android:id="@+id/rl_auth_select"
                                android:layout_width="@dimen/x105"
                                android:layout_height="@dimen/x23"
                                android:layout_marginLeft="@dimen/x16"
                                android:background="@drawable/activity_travels_plan_time_bg">

                                <TextView
                                    android:id="@+id/tv_auth"
                                    android:layout_width="@dimen/x84"
                                    android:layout_height="@dimen/x23"
                                    android:gravity="center"
                                    android:text="不限"
                                    android:textColor="@color/color323232"
                                    android:textSize="@dimen/x15sp" />

                                <TextView
                                    android:layout_width="@dimen/x22"
                                    android:layout_height="@dimen/x23"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/activity_travels_plan_time_bg"
                                    android:gravity="center"
                                    android:text="▼"
                                    android:textColor="@color/color323232"
                                    android:textSize="@dimen/x10sp" />
                            </RelativeLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x24"
                            android:layout_marginTop="@dimen/x19"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/activityTravelsPlanTv"
                                android:text="自动通过报名" />
                            <Switch
                                android:id="@+id/s_toggle"
                                android:showText="true"
                                android:textOn="开"
                                android:textOff="关"
                                android:switchTextAppearance="@style/mySwitchStyle"
                                android:textColorLink="@color/colorFAFAFA"
                                android:layout_marginLeft="@dimen/x10"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/fragmentMeLine"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x19" />

            <RelativeLayout style="@style/activityTravelsPlanRl">

                <com.yunspeak.travel.ui.view.FontsIconTextView
                    style="@style/activityTravelsPlanTv"
                    android:text="@string/activity_personnel_equipment_equ" />

                <TextView
                    android:id="@+id/tv_equ"
                    style="@style/activityTravelsPlanDes"
                    android:text="道具租用" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_toRightOf="@id/tv_equ"
                    android:text="免费租用"
                    android:textColor="@color/color909090"
                    android:textSize="@dimen/x12sp" />

            </RelativeLayout>
            <com.yunspeak.travel.ui.view.ToShowAllListView
                android:id="@+id/lv_equ"
                android:visibility="gone"
                style="@style/commonListViewStyle"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginLeft="@dimen/x31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.yunspeak.travel.ui.view.ToShowAllListView>

            <Button
                android:id="@+id/bt_select_equ"
                android:layout_width="@dimen/x125"
                android:layout_height="@dimen/x35"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginTop="@dimen/x16"
                android:background="@drawable/activity_travels_plan_line_bg"
                android:gravity="center"
                android:text="选择编辑"
                android:textColor="@color/colorFAFAFA"
                android:textSize="@dimen/x16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x53"
                android:text="备注"
                android:textColor="@color/color646464"
                android:textSize="@dimen/x15sp" />

            <TextView
                android:layout_marginBottom="@dimen/x40"
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x53"
                android:layout_marginRight="@dimen/x53"
                android:layout_marginTop="@dimen/x6"
                android:lineSpacingExtra="@dimen/x6"
                android:text="@string/prop_des"
                android:textColor="@color/color969696"
                android:textSize="@dimen/x14sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
