<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFAFAFA"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:text="已佩戴称号"
        android:gravity="center_vertical"
        android:textColor="@color/color646464"
        android:textSize="@dimen/x16sp"
        android:paddingLeft="@dimen/x21"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />
    <View
        android:background="@color/meLine"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginLeft="@dimen/x15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>
    <com.yunspeak.travel.ui.view.FlowLayout
        android:id="@+id/fl_title"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"/>
    <TextView
        android:text="称号列表"
        android:gravity="center_vertical"
        android:textColor="@color/color646464"
        android:textSize="@dimen/x16sp"
        android:paddingLeft="@dimen/x21"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35" />
    <View
        android:background="@color/meLine"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginLeft="@dimen/x15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_title"
        app:tabMode="scrollable"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x26"
        android:layout_marginRight="@dimen/x26"
        app:tabSelectedTextColor="@color/otherTitleBg"
        app:tabTextColor="@color/color646464"
        app:tabIndicatorColor="@color/otherTitleBg"
        app:tabGravity="fill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x39"/>
    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
