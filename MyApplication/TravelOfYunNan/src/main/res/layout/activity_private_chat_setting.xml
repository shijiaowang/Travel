<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorFAFAFA"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x75">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginLeft="@dimen/x22"
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user_name"
                android:textColor="@color/color646464"
                android:textSize="@dimen/x14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/x2"
                android:id="@+id/tv_type"
                android:gravity="center"
                android:textColor="@color/colorFAFAFA"
                android:textSize="@dimen/x11sp"
                android:layout_marginLeft="@dimen/x15"
                android:layout_toRightOf="@id/tv_user_name"
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/x14" />
            <TextView
                android:id="@+id/tv_des"
                android:layout_below="@id/tv_user_name"
                android:layout_marginTop="@dimen/x11"
                android:textColor="@color/color969696"
                android:textSize="@dimen/x12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:id="@+id/tv_cursor"
            android:layout_marginRight="@dimen/x22"
            android:textSize="@dimen/x15sp"
            android:text="@string/activity_message_center_cursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
