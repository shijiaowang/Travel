<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorFAFAFA"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="@dimen/x73"
                android:layout_height="@dimen/x73"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x12"
                android:layout_marginTop="@dimen/x10">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/x73"
                    android:layout_height="@dimen/x73" />

                <com.yunspeak.travel.ui.view.FontsIconTextView
                    android:id="@+id/tv_change_icon"
                    android:paddingBottom="@dimen/x3"
                    android:layout_width="@dimen/x31"
                    android:layout_height="@dimen/x31"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/activity_setting_icon_camera_bg"
                    android:gravity="center"
                    android:text="@string/activity_setting_camera"
                    android:textColor="@color/colorFAFAFA"
                    android:textSize="@dimen/x20sp" />
            </RelativeLayout>

            <LinearLayout style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="用户ID" />

                <TextView
                    android:id="@+id/tv_user_id"
                    style="@style/activitySettingTvValue"
                    />
            </LinearLayout>

            <View style="@style/activitySettingLine" />

            <LinearLayout style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="昵称"
                    android:id="@+id/textView2" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_user_nick_name"
                    style="@style/activitySettingTvValue"
                     />
            </LinearLayout>


            <View style="@style/activitySettingLine" />
            <LinearLayout style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="年龄"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tv_user_age"
                    android:text="保密"
                    style="@style/activitySettingTvValue"
                    />
                <TextView
                    android:text="公开显示"
                    android:textColor="@color/color323232"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Switch
                    android:id="@+id/s_toggle"
                    android:showText="true"
                    android:textOn="开"
                    android:textOff="关"
                    android:checked="true"
                    android:switchTextAppearance="@style/mySwitchStyle"
                    android:textColorLink="@color/colorFAFAFA"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <View style="@style/activitySettingLine" />

            <LinearLayout
                style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="地区" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_user_live_place"
                    style="@style/activitySettingTvValue"
                     />
            </LinearLayout>

            <View style="@style/activitySettingLine" />

            <LinearLayout
                android:id="@+id/ll_profile"
                style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="个人简介" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x1"
                    android:layout_weight="1" />

                <com.yunspeak.travel.ui.view.FontsIconTextView
                    style="@style/activitySettingTvType"
                    android:layout_width="wrap_content"
                    android:text="@string/activity_message_center_cursor"
                    android:textColor="@color/colorb5b5b5" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x7"
                android:background="@color/meLine" />

            <LinearLayout
                android:id="@+id/ll_phone"
                style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="绑定手机"
                    android:id="@+id/textView3" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x1"
                    android:layout_weight="1" />

                <com.yunspeak.travel.ui.view.PhoneTextView
                    android:id="@+id/ptv_phone"
                    style="@style/activitySettingTvValue"
                    android:layout_marginRight="17dp"
                   />

                <com.yunspeak.travel.ui.view.FontsIconTextView

                    style="@style/activitySettingTvType"
                    android:layout_width="wrap_content"
                    android:text="@string/activity_message_center_cursor"
                    android:textColor="@color/colorb5b5b5" />
            </LinearLayout>

            <View style="@style/activitySettingLine" />

            <LinearLayout
                android:id="@+id/ll_change_password"
                style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="修改密码" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x7"
                android:background="@color/meLine" />

            <LinearLayout
                android:id="@+id/ll_about"
                style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="关于城外" />
            </LinearLayout>

            <View style="@style/activitySettingLine" />

            <LinearLayout
                android:id="@+id/ll_back"
                style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="意见反馈" />
            </LinearLayout>

            <View style="@style/activitySettingLine" />

            <LinearLayout
                android:id="@+id/ll_clear"
                style="@style/activitySettingLl">

                <TextView
                    style="@style/activitySettingTvType"
                    android:text="清除缓存" />
            </LinearLayout>

            <View style="@style/activitySettingLine" />

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                android:orientation="horizontal">

                <com.yunspeak.travel.ui.view.FontsIconTextView
                    android:text="@string/activity_setting_log_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff7f6c"
                    android:textSize="@dimen/x13sp" />

                <TextView
                    android:layout_marginLeft="@dimen/x9"
                    android:text="退出登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/x13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

