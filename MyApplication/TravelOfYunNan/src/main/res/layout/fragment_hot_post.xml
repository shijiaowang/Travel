<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="FragmentHotBinding">
        <variable
            name="hot"
            type="com.yunspeak.travel.ui.circle.hot.model.HotRecycleModel"/>

    </data>
    <com.yunspeak.travel.ui.view.StatusView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
            android:id="@id/status_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:init="@{0}"
            app:onRefreshListener="@{hot.onRefreshListener}"
            app:onLoadingMoreListener="@{hot.onLoadMoreListener}"
            app:loading="@={hot.isLoading}"
            app:refreshing="@={hot.isRefreshing}"
            app:load_more_enabled="@{hot.isLoadingEnable}"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@id/swipe_target"
                app:manager="@{0}"
                app:child_space="@{5}"
                app:setRecycleView="@{hot.datas}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="@dimen/x10" />
        </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>
    </com.yunspeak.travel.ui.view.StatusView>
</layout>
