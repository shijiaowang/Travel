<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical"
    tools:context="com.example.administrator.travel.ui.activity.CreateAlbumActivity">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/activity_create_bg">

        <TextView
            android:id="@+id/tv_back"
            style="@style/backFontsIcon"
            android:layout_centerVertical="false"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/tv_more"
            style="@style/backFontsIcon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:layout_marginRight="22dp"
            android:layout_marginTop="40dp"
            android:text="@string/activity_message_center_more" />

        <TextView
            android:id="@+id/tv_set_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:drawableLeft="@drawable/activity_create_album_set"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="设置封面"
            android:textColor="#fafafa"
            android:textSize="12sp" />

        <EditText
            android:textCursorDrawable="@null"
            android:id="@+id/ed_set_name"
            android:layout_width="254dp"
            android:layout_height="39dp"
            android:layout_below="@id/tv_set_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/activity_create_album_set_name_bg"
            android:gravity="center"
            android:lines="1"
            android:text="请设置相册名称"
            android:textColor="#fafafa"
            android:textSize="17sp" />
    </RelativeLayout>
    <TextView
        android:text="照片列表"
        android:textColor="#323232"
        android:textSize="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_photo"
        android:divider="@null"
        android:scrollbars="none"
        android:dividerHeight="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="316dp"
        android:layout_height="match_parent">

    </ListView>


</LinearLayout>
