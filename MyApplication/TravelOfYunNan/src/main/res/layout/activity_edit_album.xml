<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical"
    tools:context="com.example.administrator.travel.ui.me.createalbum.CreateAlbumActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/activity_create_bg">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
         <TextView
             android:layout_marginBottom="30dp"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true"
             android:id="@+id/tv_name"
             android:textColor="@color/colorFAFAFA"
             android:textSize="24sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        <EditText
            android:visibility="gone"
            android:id="@+id/ed_set_name"
            android:layout_width="254dp"
            android:layout_height="39dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/activity_create_album_set_name_bg"
            android:gravity="center"
            android:lines="1"
            android:maxLength="10"
            android:textColor="#fafafa"
            android:textColorHint="#fafafa"
            android:textCursorDrawable="@null"
            android:textSize="17sp" />

        <TextView
           android:visibility="gone"
            android:id="@+id/tv_set_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/ed_set_name"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/activity_create_album_set"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="设置封面"
            android:textColor="#fafafa"
            android:textSize="12sp" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="相册简介"
        android:textColor="#323232"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:lineSpacingExtra="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color646464"
        android:textSize="12sp" />
    <RelativeLayout
        android:id="@+id/rl_edit_des"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorFAFAFA"
        android:layout_width="315dp"
        android:layout_height="170dp">
        <EditText
            android:maxLength="80"
            android:padding="5dp"
            android:id="@+id/et_des"
            android:gravity="start"
            android:textSize="12sp"
            android:textColor="@color/colorC1c1c1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_des"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:text="@string/activity_activate_detail_pen"
                android:textColor="@color/colorC1c1c1"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="相册简介"
                android:layout_marginLeft="6dp"
                android:textColor="@color/colorC1c1c1"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_count"
            android:textColor="@color/colorC1c1c1"
            android:textSize="12sp"
            android:text="0/80"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:text="照片列表"
        android:textColor="#323232"
        android:textSize="13dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_photo"
            android:layout_width="316dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:scrollbars="none">
        </ListView>
        <View
            android:layout_below="@id/lv_photo"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <RelativeLayout
            android:id="@+id/rl_toggle"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:background="@color/otherTitleBg" />

            <com.example.administrator.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="22dp"
                android:background="@drawable/circle_green"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="@string/activity_album_add"
                android:textColor="@color/colorFAFAFA" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@color/otherTitleBg"
                android:gravity="center_horizontal"
                android:text="添加图片"
                android:textColor="@color/colorFAFAFA"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
