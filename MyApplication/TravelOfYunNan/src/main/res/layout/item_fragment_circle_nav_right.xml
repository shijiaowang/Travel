<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorFAFAFA"
    android:paddingBottom="@dimen/x15">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x64" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/civ_circle_icon"
        android:layout_width="@dimen/x45"
        android:layout_height="@dimen/x45"
        android:layout_marginLeft="@dimen/x6"
        android:layout_marginTop="@dimen/x41" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_picture"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginTop="@dimen/x3"
        android:layout_toRightOf="@id/civ_circle_icon"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_circle_name"
            style="@style/commonSingleLineTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color323232"
            android:textSize="@dimen/x15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x10"
            android:minWidth="@dimen/x74"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帖子数:"
                    android:textColor="@color/color646464"
                    android:textSize="@dimen/x11sp" />

                <TextView
                    android:id="@+id/tv_post_number"
                    style="@style/commonSingleLineTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fcc073"
                    android:textSize="@dimen/x11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注数:"
                    android:textColor="@color/color646464"
                    android:textSize="@dimen/x11sp" />

                <TextView
                    android:id="@+id/tv_follow_number"
                    style="@style/commonSingleLineTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fcc073"
                    android:textSize="@dimen/x11sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

