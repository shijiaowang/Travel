<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:background="#ffffff">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x64" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/civ_circle_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="@dimen/x49"
            />

        <TextView
            android:id="@+id/tv_circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="@dimen/x44"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_picture"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/civ_circle_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帖子数:"
                android:textColor="#646464"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_post_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="#fcc073"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="关注数:"
                android:textColor="#646464"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_follow_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="#fcc073"
                android:textSize="11sp" />
        </LinearLayout>

    </RelativeLayout>

