<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/x15"
        android:background="@color/colorFAFAFA">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x64" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/civ_circle_icon"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:layout_marginLeft="@dimen/x6"
            android:layout_marginTop="@dimen/x49"
            />

        <TextView
            android:id="@+id/tv_circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x66"
            android:layout_marginTop="@dimen/x44"
            android:textColor="#ffffff"
            android:textSize="@dimen/x14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_picture"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginTop="@dimen/x15"
            android:layout_toRightOf="@id/civ_circle_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帖子数:"
                android:textColor="@color/color646464"
                android:textSize="@dimen/x11sp" />

            <TextView
                android:id="@+id/tv_post_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x3"
                android:textColor="#fcc073"
                android:textSize="@dimen/x11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="关注数:"
                android:textColor="@color/color646464"
                android:textSize="@dimen/x11sp" />

            <TextView
                android:id="@+id/tv_follow_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x3"
                android:textColor="#fcc073"
                android:textSize="@dimen/x11sp" />
        </LinearLayout>

    </RelativeLayout>

