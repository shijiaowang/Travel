<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/x15"
        android:background="@color/colorFAFAFA">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x64" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/civ_circle_icon"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:layout_marginLeft="@dimen/x6"
            android:layout_marginTop="@dimen/x49"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_picture"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginTop="@dimen/x3"
            android:layout_toRightOf="@id/civ_circle_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_circle_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color323232"
                android:textSize="@dimen/x15sp" />

            <LinearLayout
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:text="帖子数:"
                        android:textColor="@color/color646464"
                        android:textSize="@dimen/x11sp" />

                    <TextView
                        android:id="@+id/tv_post_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fcc073"
                        android:textSize="@dimen/x11sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/x2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
               <TextView
                   android:layout_width="54dp"
                   android:layout_height="wrap_content"
                   android:text="关注数:"
                   android:textColor="@color/color646464"
                   android:textSize="@dimen/x11sp" />

               <TextView
                   android:id="@+id/tv_follow_number"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#fcc073"
                   android:textSize="@dimen/x11sp" />
                    </LinearLayout>
           </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

