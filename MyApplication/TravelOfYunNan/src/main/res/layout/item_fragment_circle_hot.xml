<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
            android:id="@+id/iv_user_icon"
            android:scaleType="fitXY"
            android:src="@drawable/circle_test_icon"
            android:layout_marginLeft="20dp"
            android:layout_width="31dp"
            android:layout_height="31dp" />
        <LinearLayout
            android:layout_toRightOf="@id/iv_user_icon"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="31dp">
            <TextView
                android:id="@+id/tv_user_nike_name"
            android:singleLine="true"
            android:text="我叫安妮"
            android:textColor="@color/homeTopicChosenText"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:text="2016-4-1"
                android:textColor="@color/homeButtonUnCheckedColor"
                android:textSize="8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
       <TextView
           android:id="@+id/tv_type"
           android:textColor="@color/homeButtonUnCheckedColor"
           android:textSize="10sp"
           android:text="#生活"
           android:layout_alignParentRight="true"
           android:layout_alignParentBottom="true"
           android:layout_marginRight="25dp"
           android:layout_marginBottom="18dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:background="#f5f5f5"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="17dp"
        android:textColor="@color/homeTopicChosenText"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:text="我是生活的小艺术家"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:maxLines="2"
        android:id="@+id/tv_title_des"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="14sp"
        android:text="自学成才的艺术家，自学成才的艺术家，自学成才的艺术家。"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_picture_toggle"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_picture1"
            android:scaleType="fitXY"
            android:src="@drawable/circle_picture_test"
            android:layout_width="108dp"
            android:layout_height="108dp" />
        <ImageView
            android:id="@+id/iv_picture2"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/circle_picture_test"
            android:layout_width="108dp"
            android:layout_height="108dp" />
        <ImageView
            android:id="@+id/iv_picture3"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/circle_picture_test"
            android:layout_width="108dp"
            android:layout_height="108dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_zhan"
            android:src="@drawable/fragment_click_zhan"
            android:layout_width="19dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/tv_zhan_number"
            android:textColor="#b5b5b5"
            android:textSize="9sp"
            android:text="18"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_discuss"
            android:layout_marginLeft="15dp"
            android:src="@drawable/circle_click_discuss"
            android:layout_width="19dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/tv_discuss_number"
            android:textColor="#b5b5b5"
            android:textSize="9sp"
            android:text="18"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
