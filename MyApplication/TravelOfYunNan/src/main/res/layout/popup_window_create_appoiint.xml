<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x75"
        android:layout_marginTop="@dimen/x14"
        android:src="@drawable/fragment_appoint_create_cancel" />

    <LinearLayout
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x308"
        android:layout_above="@id/iv_cancel"
        android:layout_centerHorizontal="true"
        android:background="@color/colorFAFAFA"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x33"
            android:background="@color/otherTitleBg"
            android:gravity="center"
            android:text="发布约伴"
            android:textColor="@color/colorFAFAFA"
            android:textSize="@dimen/x14sp" />


        <RelativeLayout
            android:id="@+id/rl_together"
            android:layout_width="@dimen/x210"
            android:layout_height="@dimen/x104"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x19">

            <TextView
                android:layout_width="@dimen/x210"
                android:layout_height="@dimen/x65"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:background="@drawable/fragment_appoint_create_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x110"
                android:text="一起玩"
                android:textColor="@color/otherTitleBg"
                android:textSize="@dimen/x23sp" />

            <ImageView
                android:layout_width="@dimen/x93"
                android:layout_height="@dimen/x97"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x6"
                android:layout_marginLeft="@dimen/x6"
                android:src="@drawable/fragment_appoint_create_together_monkey" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_with_me"
            android:layout_width="@dimen/x210"
            android:layout_height="@dimen/x104"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x23">

            <TextView
                android:layout_width="@dimen/x210"
                android:layout_height="@dimen/x65"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:background="@drawable/fragment_appoint_create_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x25"
                android:text="带我玩"
                android:textColor="@color/otherTitleBg"
                android:textSize="@dimen/x23sp" />

            <ImageView
                android:layout_width="@dimen/x93"
                android:layout_height="@dimen/x97"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/x6"
                android:layout_marginRight="@dimen/x6"
                android:src="@drawable/fragment_appoint_create_with_me_monkey" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
