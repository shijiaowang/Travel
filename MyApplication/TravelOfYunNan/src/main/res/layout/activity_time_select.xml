<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorFAFAFA"
        android:layout_height="@dimen/x88">
        <TextView
            android:layout_centerVertical="true"
            android:text="入住\n离开"
            android:lineSpacingExtra="@dimen/x20"
            android:textSize="@dimen/x10"
            android:textColor="@color/color969696"
            android:layout_marginLeft="@dimen/x26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <View
            android:id="@+id/line"
            android:layout_centerInParent="true"
            android:background="@color/meLine"
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x40"/>
        <TextView
            android:id="@+id/tv_time_select_time"
            android:layout_toLeftOf="@id/line"
            android:textStyle="bold"
            android:lineSpacingExtra="@dimen/x20"
            android:textSize="@dimen/x15sp"
            android:layout_marginRight="@dimen/x40"
            android:layout_centerVertical="true"
            android:textColor="@color/otherTitleBg"
            android:layout_marginLeft="@dimen/x26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_time_select_day"
            android:layout_toRightOf="@id/line"
            android:gravity="center"
            android:textSize="@dimen/x15sp"
            android:textColor="@color/color646464"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_time_select_date"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:text="确定"
        style="@style/commonButtonNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45" />
</LinearLayout>
