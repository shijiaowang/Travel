<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:src="@drawable/register_banner"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

        <com.yunspeak.travel.ui.view.LoginEditText

            android:id="@+id/et_nick_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:line_edittext_image_src="@drawable/login_user"
            app:line_edittext_input_left="20dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:line_edittext_max_length="8"
            app:line_edittext_hint="中文/英文/数字"
            />
        <LinearLayout
            style="@style/activityRegisterLl"
            android:layout_marginTop="28dp">

            <com.yunspeak.travel.ui.view.FontsIconTextView
                style="@style/activityRegisterTextIcon"
                android:text="@string/activity_register_sex" />

            <TextView
                style="@style/activityRegisterText"
                android:text="性别" />
        </LinearLayout>
        <RadioGroup
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/boy"
                    android:scaleType="fitXY"
                    android:src="@drawable/activity_register_success_sex_boy"
                    android:layout_width="30dp"
                    android:layout_height="44dp" />
                <RadioButton
                    android:clickable="false"
                    android:id="@+id/rb_boy"
                    android:background="@drawable/select_sex_selector"
                    android:gravity="center"
                    android:button="@null"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/boy"
                    android:layout_marginLeft="10dp"
                    android:text="男"
                    android:textColor="@color/select_sex_selector"
                    android:textSize="14sp"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_girl"
                android:layout_marginLeft="92dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/girl"
                    android:scaleType="fitXY"
                    android:src="@drawable/activity_register_success_sex_girl"
                    android:layout_width="38dp"
                    android:layout_height="44dp" />
                <RadioButton
                    android:clickable="false"
                    android:id="@+id/rb_girl"
                    android:background="@drawable/select_sex_selector"
                    android:gravity="center"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:button="@null"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/girl"
                    android:layout_marginLeft="10dp"
                    android:text="女"
                    android:textColor="@color/select_sex_selector"
                    android:textSize="14sp"
                   />
            </RelativeLayout>

        </RadioGroup>

        <com.yunspeak.travel.ui.view.AvoidFastButton
            android:id="@+id/bt_start"
            android:text="开启云说之旅"
            android:textColor="@color/colorFAFAFA"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/fragment_find_search_bg"
            android:layout_width="match_parent"
            android:layout_height="41dp" />
    </LinearLayout>
