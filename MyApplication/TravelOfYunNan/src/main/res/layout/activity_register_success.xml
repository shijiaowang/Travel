<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:src="@drawable/register_banner"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

        <com.yunspeak.travel.ui.view.LoginEditText

            android:id="@+id/et_nick_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:line_edittext_image_src="@drawable/login_user"
            app:line_edittext_input_left="20dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:line_edittext_max_length="8"
            app:line_edittext_hint="中文/英文/数字"
            />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:layout_marginTop="20dp"
            android:src="@drawable/register_sex"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_boy"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:gravity="end|center_vertical"
                android:button="@drawable/sex_boy_selector"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="男"
                android:textColor="@color/select_sex_selector"
                android:textSize="15sp"
                />
            <RadioButton
                android:id="@+id/rb_girl"
                android:button="@drawable/sex_girl_selector"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:gravity="end|center_vertical"
                android:layout_marginLeft="60dp"
                android:text="女"
                android:textColor="@color/select_sex_selector"
                android:textSize="14sp"
                />
        </RadioGroup>
    </FrameLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#d2d2d2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

        <com.yunspeak.travel.ui.view.AvoidFastButton
            android:id="@+id/bt_start"
            android:text="开启【城外】旅程"
            android:textColor="@color/colorFAFAFA"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="39dp"
            android:background="@drawable/green_button_normal_bg_unclick"
            android:layout_width="150dp"
            android:layout_height="35dp" />
    </LinearLayout>
