<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x22"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x14"
        android:text="7月1日"
        android:textColor="@color/color646464"
        android:textSize="@dimen/x12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x59"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_day"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/x7"
            android:background="@drawable/activity_line_plan_day_number_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textColor="@color/colorFAFAFA"
                android:textSize="@dimen/x9sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/colorFAFAFA"
                android:textSize="@dimen/x9sp" />
        </LinearLayout>

        <com.yunspeak.travel.ui.view.ToShowAllListView
            android:paddingBottom="@dimen/x25"
            android:id="@+id/lv_line"
            android:layout_marginTop="@dimen/x22"
            android:layout_marginLeft="@dimen/x40"
            style="@style/commonListViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x73"
        android:orientation="vertical">
        <View
            android:id="@+id/iv_top_line"
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x13"
            android:background="@color/otherTitleBg"
            android:layout_marginLeft="@dimen/x9" />

        <ImageView
            android:id="@+id/iv_cursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_line_add1" />
        <View
            android:id="@+id/dlv_line"
            android:layout_width="@dimen/x1"
            android:layerType="software"
            android:background="@color/otherTitleBg"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x9" />

    </LinearLayout>


</RelativeLayout>
