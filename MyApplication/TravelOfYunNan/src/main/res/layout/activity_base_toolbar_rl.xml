<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_root"
    android:background="@color/meLine"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--页面加载错误-->
        <ImageView
            android:visibility="gone"
            android:id="@+id/page_error"
            android:layout_gravity="center"
            android:src="@drawable/page_not_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_empty"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_empty"
                android:layout_centerInParent="true"
                android:src="@drawable/empty_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="25dp"
                android:layout_below="@id/iv_empty"
                android:layout_centerHorizontal="true"
                android:text="这里一片荒芜~ "
                android:textSize="14sp"
                android:textColor="@color/color969696"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </FrameLayout>
    <!--进度条-->
    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:paddingTop="@dimen/commonStatusHeight"
        android:elevation="0dp"
        android:layout_height="@dimen/x74"
        app:titleTextAppearance="@style/ToolBar.TitleText">
        <ViewStub
            android:id="@+id/vs_bar"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
