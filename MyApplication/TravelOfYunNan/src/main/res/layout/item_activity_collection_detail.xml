<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorFAFAFA"
    android:paddingLeft="13dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingRight="13dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_icon"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:minHeight="45dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                style="@style/commonSingleLineTextStyle"
                android:textColor="@color/color323232"
                android:textSize="13sp"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.yunspeak.travel.ui.view.FontsIconTextView
                    android:id="@+id/tv_icon"
                    android:text="@string/fragment_find_add"
                    android:textColor="@color/otherTitleBg"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_content"
                    style="@style/commonSingleLineTextStyle"
                    android:textColor="@color/otherTitleBg"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:id="@+id/tv_delete"
            android:text="@string/activity_my_appoint_delete"
            android:textSize="15sp"
            android:textColor="@color/Ffbf75"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:paddingRight="13dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
           android:id="@+id/tv_time"
            android:textColor="@color/colorA9a8a8"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
           android:id="@+id/tv_price"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
