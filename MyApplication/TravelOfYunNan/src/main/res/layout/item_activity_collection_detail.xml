<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorFAFAFA"
    android:paddingLeft="13dp"

    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingRight="13dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_test1"
            android:scaleType="fitXY"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp">
            <TextView
                android:text="昆明-丽江"
                android:textColor="@color/color323232"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="行程日期：2016-6-5至2017-3-3"
                android:textColor="@color/otherTitleBg"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <com.example.administrator.travel.ui.view.FontsIconTextView
            android:id="@+id/tv_delete"
            android:text="@string/activity_my_appoint_delete"
            android:textSize="13sp"
            android:textColor="@color/Ffbf75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/meLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:paddingRight="13dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="2016.8.5  3:14"
            android:textColor="@color/colorA9a8a8"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="¥50"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
