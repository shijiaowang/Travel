<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/activityAddDestinationLl"
        android:layout_marginTop="32dp">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            style="@style/activityAddDestinationIcon"
            android:text="@string/activity_add_detail_spot" />

        <TextView
            style="@style/activityAddDestinationText"
            android:text="景点名称" />

        <EditText
            android:id="@+id/et_name"
            style="@style/activityAddDestinationEd"
            android:layout_width="183dp"
            android:layout_height="32dp" />
    </LinearLayout>

    <LinearLayout
        style="@style/activityAddDestinationLl"
        android:layout_marginTop="15dp">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            style="@style/activityAddDestinationIcon"
            android:text="@string/activity_add_detail_team_profile" />

        <TextView
            style="@style/activityAddDestinationText"
            android:text="景点简介" />

        <EditText
            android:id="@+id/et_des"
            style="@style/activityAddDestinationEd"
            android:layout_width="183dp"
            android:layout_height="105dp"
            android:gravity="start"
            android:hint="*选填"
            android:padding="3dp"
            android:textColorHint="@color/colorFAFAFA"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/activityAddDestinationLl"
        android:layout_marginTop="30dp">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            style="@style/activityAddDestinationIcon"
            android:text="@string/fragment_play_with_me_add" />

        <TextView
            style="@style/activityAddDestinationText"
            android:text="景点地址" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_address"
                style="@style/activityAddDestinationEd"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="选择地址▼"
                android:minWidth="80dp"
                android:textColor="@color/otherTitleBg"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_add"
                style="@style/activityAddDestinationEd"
                android:layout_width="183dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/otherTitleBg"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/activityAddDestinationLl"
        android:layout_marginTop="32dp">

        <com.yunspeak.travel.ui.view.FontsIconTextView
            style="@style/activityAddDestinationIcon"
            android:text="@string/activity_create_post_picture" />

        <TextView
            style="@style/activityAddDestinationText"
            android:text="景点照片" />

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="78dp"
            android:layout_marginLeft="23dp">

            <com.yunspeak.travel.ui.view.FontsIconTextView
                android:id="@+id/tv_picture"
                android:layout_width="160dp"
                android:layout_height="78dp"
                android:background="@drawable/activity_line_plan_add_bg"
                android:gravity="center"
                android:text="@string/activity_my_album_add"
                android:textColor="@color/colorb5b5b5"
                android:textSize="25sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:visibility="gone"
                android:id="@+id/iv_image"
                android:layout_width="160dp"
                android:layout_height="78dp"/>
           <com.yunspeak.travel.ui.view.FontsIconTextView
               android:visibility="gone"
               android:id="@+id/tv_delete"
               android:text="@string/activity_member_detail_delete"
               android:padding="5dp"
               android:textColor="@color/colorFf8888"
               android:layout_alignParentRight="true"
               android:textSize="10sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        style="@style/commonButtonNext"
        android:text="保存修改" />

</LinearLayout>
