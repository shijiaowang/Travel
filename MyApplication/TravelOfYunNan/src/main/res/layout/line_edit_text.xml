<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/iv_left_image"
            android:src="@drawable/login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:layout_marginLeft="@dimen/x15"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:paddingLeft="@dimen/x5"
            android:maxLength="20"
            android:paddingRight="@dimen/x5"
            android:id="@+id/et_enter"
            android:imeOptions="actionNext"
            android:textColorHint="#d2d2d2"
            android:textSize="@dimen/x15sp"
            android:textColor="@color/otherTitleBg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tv_delete"
            android:visibility="gone"
            android:text="@string/activity_member_detail_delete"
            android:textSize="@dimen/x18sp"
            android:textColor="@color/colorb5b5b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.yunspeak.travel.ui.view.AvoidFastButton
            android:id="@+id/bt_ver"
            android:layout_width="@dimen/x80"
            android:visibility="gone"
            android:layout_height="@dimen/x24"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/green_button_normal_bg_unclick"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorFAFAFA"
            android:textSize="@dimen/x12sp" />
     </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:background="#d2d2d2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>

</LinearLayout>
