<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_left_image"
            android:src="@drawable/login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="15dp"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:paddingLeft="5dp"
            android:maxLength="20"
            android:paddingRight="5dp"
            android:id="@+id/et_enter"
            android:imeOptions="actionNext"
            android:textColorHint="#d2d2d2"
            android:textSize="15sp"
            android:textColor="@color/otherTitleBg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <com.yunspeak.travel.ui.view.FontsIconTextView
            android:layout_marginRight="10dp"
            android:id="@+id/tv_delete"
            android:visibility="gone"
            android:text="@string/activity_member_detail_delete"
            android:textSize="15sp"
            android:textColor="@color/colorb5b5b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.yunspeak.travel.ui.view.AvoidFastButton
            android:id="@+id/bt_ver"
            android:layout_width="80dp"
            android:visibility="gone"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/green_button_normal_bg_unclick"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorFAFAFA"
            android:textSize="12sp" />
     </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:background="#d2d2d2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
