<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/user_icon" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="耿汉涵"
                android:textColor="@color/color7d7d7d"
                android:textSize="12sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#肥肥圈#"
                android:textColor="@color/Ffbf75"
                android:textSize="11sp" />

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:text="@string/activity_circle_detail_follow"
            android:textColor="@color/otherFf7f6c"
            android:textSize="11sp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/activity_home_search_follow_bg"
            android:layout_marginRight="13dp"
            android:layout_width="wrap_content"
            android:layout_height="18dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="70dp"
        android:background="@color/meLine" />

</LinearLayout>
