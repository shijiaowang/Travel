<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/otherTitleBg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/otherTitleBg</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/fresco_share_view</item>
        <item name="android:windowSharedElementExitTransition">@transition/fresco_share_view</item>
    </style>

    <style name="ToolBarTheme" parent="AppTheme.Base"/>

    <style name="CreatePostTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/otherTitleBg</item>
    </style>

    <style name="NoTitleFullscreen" parent="AppTheme.Base">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/otherTitleBg</item>
    </style>

    <style name="mySwitchStyle">
        <item name="android:textColor">@color/colorFAFAFA</item>
        <item name="android:textSize">9sp</item>
    </style>
    <style name="myDialog" parent="commonDialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>