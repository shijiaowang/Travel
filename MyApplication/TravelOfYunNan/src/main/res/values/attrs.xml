<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="gradient_normal_color" format="color" />
    <attr name="gradient_checked_up_color" format="color" />
    <attr name="gradient_checked_down_color" format="color" />
    <declare-styleable name="GradientTextView">
        <attr name="gradient_normal_color" />
        <attr name="gradient_checked_up_color" />
        <attr name="gradient_checked_down_color" />
    </declare-styleable>

    <attr name="line_edittext_hint" format="string" />
    <attr name="line_edittext_max_length" format="integer" />
    <attr name="line_edittext_image_left" format="dimension" />
    <attr name="line_edittext_input_left" format="dimension" />
    <attr name="line_edittext_delete_right" format="dimension" />
    <attr name="line_edittext_image_src" format="reference" />
    <attr name="line_edittext_text_hint_color" format="color" />
    <attr name="line_edittext_text_color" format="color" />
    <attr name="line_edittext_text_size" format="dimension" />
    <attr name="line_edittext_show_send_button" format="boolean" />
    <declare-styleable name="LoginEditText">
        <attr name="line_edittext_hint" />
        <attr name="line_edittext_max_length" />
        <attr name="line_edittext_image_left" />
        <attr name="line_edittext_input_left" />
        <attr name="line_edittext_delete_right" />
        <attr name="line_edittext_text_hint_color" />
        <attr name="line_edittext_image_src" />
        <attr name="line_edittext_text_color" />
        <attr name="line_edittext_text_size" />
        <attr name="line_edittext_show_send_button" />
    </declare-styleable>
    <attr name="m_limit_lines"  format="integer"/>
    <declare-styleable name="EllipsizeTextView">
        <attr name="m_limit_lines" />
    </declare-styleable>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>
    <attr name="item_first_icon" format="string" />
    <attr name="item_second_icon" format="string" />
    <attr name="item_third_icon" format="string" />
    <attr name="item_fourth_icon" format="string" />
    <attr name="item_icon_size" format="dimension" />
    <attr name="item_first_icon_color" format="color" />
    <attr name="item_second_icon_color" format="color" />
    <attr name="item_third_icon_color" format="color" />
    <attr name="item_fourth_icon_color" format="color" />

    <attr name="item_first_text_size" format="dimension" />
    <attr name="item_second_text_size" format="dimension" />
    <attr name="item_third_text_size" format="dimension" />
    <attr name="item_fourth_text_size" format="dimension" />
    <attr name="item_first_text_color" format="dimension" />
    <attr name="item_second_text_color" format="dimension" />
    <attr name="item_third_text_color" format="dimension" />
    <attr name="item_fourth_text_color" format="dimension" />
    <declare-styleable name="AppointItemView">
        <attr name="item_first_icon" />
        <attr name="item_second_icon" />
        <attr name="item_third_icon" />
        <attr name="item_fourth_icon" />
        <attr name="item_icon_size" />
        <attr name="item_first_icon_color" />
        <attr name="item_second_icon_color" />
        <attr name="item_third_icon_color" />
        <attr name="item_fourth_icon_color" />
        <attr name="item_first_text_size" />
        <attr name="item_second_text_size" />
        <attr name="item_third_text_size"  />
        <attr name="item_fourth_text_size" />
        <attr name="item_first_text_color" />
        <attr name="item_second_text_color" />
        <attr name="item_third_text_color" />
        <attr name="item_fourth_text_color" />
    </declare-styleable>

</resources>