<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--homeFragment-->
    <!--话题文字-->
    <style name="HomeTopicText">
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/homeTopicTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--话题的父布局-->
    <style name="HomeTopicParent">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--android:textSize="10sp"
        android:textColor="@color/homeTopicChosenText"-->
    <!--话题的父布局-->
    <style name="HomeHotSpotsText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/homeTopicChosenText</item>
    </style>

    <!--主页按钮布局-->
    <style name="HomeButtonParentLL">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="HomeButtonIconFonts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#7b7b7b</item>
    </style>
    <style name="HomeButtonIconName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--水平平方线-->
    <style name="AVGLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--圈子文字-->
    <style name="CircleText">
        <item name="android:textColor">@color/circleDesText</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
