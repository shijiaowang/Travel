<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--homeFragment-->
    <!--话题文字-->
    <style name="HomeTopicText">
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/homeTopicTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--话题的父布局-->
    <style name="HomeTopicParent">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--android:textSize="10sp"
        android:textColor="@color/homeTopicChosenText"-->
    <!--话题的父布局-->
    <style name="HomeHotSpotsText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/homeTopicChosenText</item>
    </style>

    <!--主页按钮布局-->
    <style name="HomeButtonParentLL">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="HomeButtonIconFonts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#7b7b7b</item>
    </style>
    <style name="HomeButtonIconName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--水平平方线-->
    <style name="AVGLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--圈子文字-->
    <style name="CircleText">
        <item name="android:textColor">@color/circleDesText</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--个人相册等功能-->
    <style name="fragmentMeAlbum">
        <item name="android:textColor">@color/homeButtonUnCheckedColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <!--相册等的父控件-->
    <style name="lLFragmentMeAlbum">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <!--相册等功能返回按钮-->
    <style name="ivFragmentMeAlbumButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/fragment_circle_nav_left_normal</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--个人中心分割线-->
    <style name="fragmentMeLine">
        <item name="android:background">@color/meLine</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--关注等-->
    <style name="activityOtherFollow">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#646464</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--信息名称-->
    <style name="activityOtherInformationType">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:textColor">#9f9f9f</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--详细信息-->
    <style name="activityOtherInformationDetail" parent="activityOtherInformationType">
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:textColor">#7c7c7c</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--线条-->
    <style name="activityOtherInformationLine">
        <item name="android:background">#e8e8e8</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <!--android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"-->
    <!--他人相册下面的字-->
    <style name="activityOtherAlbumFont">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"-->
    <!--系统消息item-->
    <style name="activitySystemMessageRl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>
    <!--系统消息图标-->
    <style name="activitySystemMessageIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="activitySystemMessageTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#8c8c8c</item>
    </style>

    <style name="activitySystemMessageTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#b7b7b7</item>
    </style>

</resources>
