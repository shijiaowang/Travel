<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--activity的一些布局样式-->
    <style name="oneHeightMatchLine">
        <item name="android:background">@color/meLine</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x1</item>
    </style>
    <!--公用button-->
    <style name="commonButtonNext">
        <item name="android:id">@id/bt_next</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x45</item>
        <item name="android:text">下一步</item>
        <item name="android:background">@color/otherTitleBg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x15sp</item>
        <item name="android:textColor">@color/colorFAFAFA</item>
    </style>


    <!--认证页面-->
    <style name="activityIdentityAuthenticationRl">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/x20</item>
        <item name="android:paddingRight">@dimen/x20</item>
        <item name="android:background">@drawable/normal_press_bg</item>
        <item name="android:layout_height">@dimen/x50</item>
    </style>

    <style name="activityIdentityAuthenticationText">
        <item name="android:layout_marginLeft">@dimen/x35</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x13sp</item>
        <item name="android:textColor">@color/color323232</item>
    </style>

    <style name="activityIdentityAuthenticationIcon" parent="activityIdentityAuthenticationText">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="activityIdentityAuthenticationCursor" parent="activityIdentityAuthenticationIcon">
        <item name="android:textColor">@color/color969696</item>
        <item name="android:text">@string/activity_message_center_cursor</item>
        <item name="android:layout_alignParentRight">true</item>

    </style>

    <style name="activityIdentityAuthenticationType" parent="activityIdentityAuthenticationCursor">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_alignParentRight">false</item>
    </style>
    <!--首页搜索页面-->
    <style name="activityHomeSearchLl">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="activityHomeSearchText">
        <item name="android:textSize">@dimen/x13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--消息中心-->
    <style name="activityMessageCenterLl">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x45</item>
        <item name="android:background">@color/colorFAFAFA</item>
        <item name="android:paddingLeft">@dimen/x13</item>
        <item name="android:paddingRight">@dimen/x13</item>
    </style>

    <style name="activityMessageCenterIconText">
        <item name="android:textSize">@dimen/x20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="activityMessageCenterText" parent="activityMessageCenterIconText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color8c8c8c</item>
        <item name="android:layout_marginLeft">@dimen/x10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="activityMessageCenterCursor" parent="activityMessageCenterIconText">
        <item name="android:textSize">@dimen/x11sp</item>
        <item name="android:textColor">#7b7b7b</item>
    </style>

    <style name="activityMessageCenterDot">
        <item name="android:layout_width">@dimen/x12</item>
        <item name="android:layout_height">@dimen/x12</item>
        <item name="android:layout_marginRight">@dimen/x5</item>
        <item name="android:background">@drawable/message_dot</item>
    </style>


    <style name="XScrollViewListViewCommon" parent="commonListViewStyle">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    <!--旅行计划-->
    <style name="activityTravelsPlanRl">
        <item name="android:layout_marginTop">@dimen/x15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="activityTravelsPlanTv" parent="commonSingleLineTextStyle">
        <item name="android:textColor">@color/color323232</item>
        <item name="android:textSize">@dimen/x16sp</item>
        <item name="android:layout_marginLeft">@dimen/x22</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="activityTravelsPlanDes" parent="activityTravelsPlanTv">
        <item name="android:layout_marginLeft">@dimen/x53</item>
    </style>

    <style name="activityTravelsPlanTvTime" parent="activityTravelsPlanTv">
        <item name="android:textColor">@color/color646464</item>
        <item name="android:textSize">@dimen/x15sp</item>
        <item name="android:layout_marginLeft">0dp</item>

    </style>

    <style name="activityTravelsPlanTvTimeSelect">
        <item name="android:textColor">@color/color323232</item>
        <item name="android:textSize">@dimen/x15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/activity_travels_plan_time_bg</item>
        <item name="android:layout_width">@dimen/x106</item>
        <item name="android:layout_height">@dimen/x23</item>
    </style>

    <style name="activityTravelsPlanIconRl">
        <item name="android:layout_marginLeft">@dimen/x31</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="activityTravelsPlanIcon" parent="activityTravelsPlanIconRl">
        <item name="android:text">@string/activity_aite_ok</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="activityTravelsPlanIconText" parent="activityTravelsPlanIconRl">
        <item name="android:textColor">@color/color323232</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/x12sp</item>
    </style>


    <!--一起玩详情页-->
    <style name="activityTogetherDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x9sp</item>
        <item name="android:textColor">@color/colorb5b5b5</item>
    </style>

    <!--添加景点-->
    <style name="activityAddDestinationLl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/x22</item>
    </style>

    <style name="activityAddDestinationIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/color313131</item>

    </style>

    <style name="activityAddDestinationText" parent="activityAddDestinationIcon">
        <item name="android:layout_marginLeft">@dimen/x5</item>
    </style>

    <style name="activityAddDestinationEd">
        <item name="android:layout_marginLeft">@dimen/x23</item>
        <item name="android:background">@drawable/activity_travels_plan_time_bg</item>
    </style>
    <!--pop-->
    <style name="appointPopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x13sp</item>
        <item name="android:textColor">@color/colorFAFAFA</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="shareText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x12sp</item>
        <item name="android:textColor">@color/color646464</item>
        <item name="android:drawablePadding">@dimen/x9</item>
        <item name="android:background">@drawable/normal_press_bg</item>
    </style>

    <style name="complaintRb" parent="commonSingleLineTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/x25</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x12sp</item>
        <item name="android:textColor">@color/colorFAFAFA</item>
        <item name="android:background">@drawable/pop_compalint_selector</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginLeft">@dimen/x10</item>
    </style>
    <!--我的主题-->
    <!--android:textColor="#a5a5a5"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"-->

    <style name="themeCommonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/x10sp</item>
        <item name="android:textColor">#a5a5a5</item>
    </style>
    <!--我的约伴 文字-->
    <style name="myAppointRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/x40</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/select_text_selector</item>
    </style>

    <style name="TextShadowColor">
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="TextShadowColor.HomeFragmentMenuText">
        <item name="android:textColor">@color/colorFAFAFA</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="HomeMenuText">
        <item name="android:textSize">@dimen/x10sp</item>
        <item name="android:paddingLeft">@dimen/x7</item>
        <item name="android:paddingRight">@dimen/x7</item>
        <item name="android:lineSpacingExtra">@dimen/x5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color646464</item>
        <item name="android:background">@color/colorFAFAFA</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <style name="HotelListCursor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color646464</item>
        <item name="android:textSize">@dimen/x13sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableRight">@drawable/hotel_list_select_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/x5</item>
    </style>

    <style name="HotelListLL">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HotelDetailInOut">
        <item name="android:textColor">@color/otherTitleBg</item>
        <item name="android:textSize">@dimen/x12sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:lineSpacingExtra">@dimen/x9</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HotelDetailTitle">
        <item name="android:background">@color/colorFAFAFA</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/x15</item>
        <item name="android:paddingTop">@dimen/x11</item>
        <item name="android:textColor">@color/color646464</item>
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HotelOrderTitle">
        <item name="android:textColor">@color/color323232</item>
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/x44</item>
    </style>


    <style name="HotelOrderRl">
        <item name="android:paddingLeft">@dimen/x25</item>
        <item name="android:paddingRight">@dimen/x26</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x44</item>
    </style>

    <style name="HotelOrderEdit">
        <item name="android:textColor">@color/color969696</item>
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:layout_marginLeft">@dimen/x137</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="searchIcon">
        <item name="android:id">@id/tv_search</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/x10</item>
        <item name="android:background">@drawable/normal_press_bg</item>
        <item name="android:padding">@dimen/x5</item>
        <item name="android:text">@string/fragment_circle_search</item>
        <item name="android:textColor">@color/colorFAFAFA</item>
    </style>

    <style name="searchEditText">
        <item name="android:id">@id/et_search</item>
        <item name="android:layout_toLeftOf">@id/tv_search</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/please_enter_key</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">@dimen/x10</item>
        <item name="android:textColor">@color/color646464</item>
        <item name="android:textColorHint">@color/colorFAFAFA</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>
